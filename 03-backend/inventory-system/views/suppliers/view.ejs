<%- include('../partials/header') %>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-truck"></i> <%= supplier.name %></h2>
        <div>
            <a href="/suppliers/<%= supplier.id %>/edit" class="btn btn-primary"><i class="bi bi-pencil"></i> Edit</a>
            <a href="/suppliers" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Supplier Details</div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr><th>Code:</th><td><%= supplier.code %></td></tr>
                        <tr><th>Contact:</th><td><%= supplier.contact_person || '-' %></td></tr>
                        <tr><th>Phone:</th><td><%= supplier.phone || '-' %></td></tr>
                        <tr><th>Email:</th><td><%= supplier.email || '-' %></td></tr>
                        <tr><th>Address:</th><td><%= supplier.address || '-' %></td></tr>
                        <tr><th>City:</th><td><%= supplier.city || '-' %></td></tr>
                        <tr><th>Country:</th><td><%= supplier.country || '-' %></td></tr>
                        <tr><th>Tax ID:</th><td><%= supplier.tax_id || '-' %></td></tr>
                        <tr><th>Payment:</th><td><%= supplier.payment_terms || '-' %></td></tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Products from this Supplier (<%= products.length %>)</div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr><th>Code</th><th>Product</th><th class="text-end">Stock</th><th class="text-end">Price</th></tr>
                        </thead>
                        <tbody>
                            <% products.forEach(p => { %>
                            <tr>
                                <td><%= p.code %></td>
                                <td><a href="/products/<%= p.id %>"><%= p.name %></a></td>
                                <td class="text-end"><%= p.current_stock %></td>
                                <td class="text-end">$<%= p.purchase_price.toFixed(2) %></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
