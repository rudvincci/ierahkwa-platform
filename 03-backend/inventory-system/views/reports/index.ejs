<%- include('../partials/header') %>

<div class="container-fluid p-4">
    <h2 class="mb-4"><i class="bi bi-file-earmark-text"></i> Reports</h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-clipboard-data display-4 text-primary mb-3"></i>
                    <h5>Stock Report</h5>
                    <p class="text-muted">Current inventory levels and values</p>
                    <a href="/reports/stock" class="btn btn-primary">View Report</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle display-4 text-danger mb-3"></i>
                    <h5>Low Stock Alert</h5>
                    <p class="text-muted">Products below minimum stock</p>
                    <a href="/reports/low-stock" class="btn btn-danger">View Report</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-arrow-left-right display-4 text-info mb-3"></i>
                    <h5>Movement Report</h5>
                    <p class="text-muted">Stock movement history</p>
                    <a href="/reports/movements" class="btn btn-info">View Report</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
