<%- include('../partials/header') %>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-tags"></i> Categories</h2>
        <a href="/categories/new" class="btn btn-primary"><i class="bi bi-plus-circle"></i> New Category</a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover" id="categoriesTable">
                <thead class="table-light">
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Parent</th>
                        <th class="text-center">Products</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(cat => { %>
                    <tr class="<%= !cat.is_active ? 'table-secondary' : '' %>">
                        <td><strong><%= cat.code %></strong></td>
                        <td><%= cat.name %></td>
                        <td><small class="text-muted"><%= cat.description || '-' %></small></td>
                        <td><%= cat.parent_name || '-' %></td>
                        <td class="text-center"><span class="badge bg-info"><%= cat.product_count %></span></td>
                        <td><span class="badge bg-<%= cat.is_active ? 'success' : 'secondary' %>"><%= cat.is_active ? 'Active' : 'Inactive' %></span></td>
                        <td class="text-center">
                            <a href="/categories/<%= cat.id %>/edit" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                            <% if (cat.product_count === 0) { %>
                            <form method="POST" action="/categories/<%= cat.id %>/delete" class="d-inline" onsubmit="return confirm('Delete?')">
                                <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                            </form>
                            <% } %>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>$(document).ready(function() { $('#categoriesTable').DataTable({ pageLength: 25 }); });</script>

<%- include('../partials/footer') %>
