# Ierahkwa Platform — npm Security Configuration
# Defense against supply chain attacks (Shai-Hulud mitigation)

# Disable lifecycle scripts by default during install
# This prevents malicious postinstall scripts from executing
ignore-scripts=true

# Enforce exact versions (no semver ranges)
save-exact=true

# Require lockfile for deterministic builds
package-lock=true

# Audit on every install
audit=true

# Set audit level to flag high and critical
audit-level=high

# Disable funding messages (reduces noise)
fund=false

# Disable update notifications
update-notifier=false

# Engine strict mode — enforce Node.js version
engine-strict=true

# Prevent accidental publish of private packages
# (defense against dependency confusion)
@ierahkwa:registry=https://registry.npmjs.org/
