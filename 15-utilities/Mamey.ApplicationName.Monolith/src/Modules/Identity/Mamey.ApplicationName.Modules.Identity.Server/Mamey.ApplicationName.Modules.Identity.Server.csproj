      </Content>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Mamey.ApplicationName.Modules.Identity.Core\Mamey.ApplicationName.Modules.Identity.Core.csproj" />
    </ItemGroup>

