{
    "app": {
        "name": "Futurehead Group API",
        "webClientUrl": "https://localhost:7194",
        "version": "1.0.0",
        "domain": "futurehead.group"
        
    },
    "auth": {
        "authenticationDisabled": false,
        "issuerSigningKey": "fa5DRdkVwZeQnrDAcBrHCYwAWd6y2crPUbSZq4zUWBRFwDfKDXQWH38vZRfv",
        "issuer": "futurehead.group",
        "validIssuer": "futurehead.group",
        "validateAudience": true,
        "validateIssuer": true,
        "validateLifetime": true,
        "expiry": "00.00:30:00",
        "refreshTokenLifetime": "00.00:30:00",
        "cookie": {
            "httpOnly": true,
            "sameSite": "unspecified",
            "secure": false
        }
    },
    "cors": {
        "allowCredentials": true,
        "allowedOrigins": [
            "https://localhost:7295",
            "https://futurehead.group"
        ],
        "allowedMethods": [
            "POST",
            "PUT",
            "DELETE"
        ],
        "allowedHeaders": [
            "Content-Type",
            "Authorization"
        ],
        "exposedHeaders": [
            "Resource-ID"
        ]
    },
    "email": {
        "enabled": true,
        "type": "smtp",
        "emailId": "DoNotReply@futurehead.group",
        "name": "Futurehead Group Support (no-reply)",
        "mailkit": {
            "enabled": true,
            "password": "",
            "smtp": "localhost",
            "port": "1025",
            "useSsl": false
        },
        "acs": {
            "connectionString": ""
        }
    },
    "httpClient": {
        "type": "fabio",
        "retries": 3,
        "services": {
            "people": "people-service"
        },
        "requestMasking": {
            "enabled": true,
            "maskTemplate": "*****"
        }
    },
    "logger": {
        "level": "information",
        "overrides": {
            "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
            "Microsoft.EntityFrameworkCore.Infrastructure": "Warning"
        },
        "excludePaths": [
            "/",
            "/ping",
            "/metrics"
        ],
        "excludeProperties": [
            "api_key",
            "access_key",
            "ApiKey",
            "ApiSecret",
            "ClientId",
            "ClientSecret",
            "ConnectionString",
            "Password",
            "Email",
            "Login",
            "Secret",
            "Token"
        ],
        "console": {
            "enabled": true
        },
        "file": {
            "enabled": false,
            "path": "logs/logs.txt",
            "interval": "day"
        },
        "seq": {
            "enabled": true,
            "url": "http://localhost:5341",
            "apiKey": "secret"
        },
        "tags": {}
    },
    "messaging": {
        "useAsyncDispatcher": true
    },
    "postgres": {
        "connectionString": "Host=localhost;Database=__applicationNameDb;Username=admin;Password=secret;Port=5432"
    },
    "outbox": {
        "enabled": false,
        "interval": "00:00:01"
    },
    "mongo": {
        "connectionString": "mongodb://root:secret@localhost:27017/?authSource=admin",
        "database": "Bank",
        "disableTransactions": true
    },
    "security": {
        "encryptionKey": "super-duper-secret-key**",
        "recovery": {
            "issuer": "mamey",
            "expiry": "00:02:00",
            "allowedEndpoints": [ "/reset-password" ]
        },
        "certificate": {
            "enabled": true,
            "header": "Certificate",
            "skipRevocationCheck": false,
            "allowedDomains": [ "mamey.io" ],
            "allowSubdomains": true,
            "allowedHosts": [
                "localhost"
            ],
            "acl": {
                "wallets-service": {
                    "validIssuer": "localhost",
                    "permissions": [
                        "users:read"
                    ]
                }
            }
        },
        "encryption": {
            "enabled": true,
            "key": "super-duper-secret-key**12345678"
        }
    },
    "vault": {
        "enabled": false,
        "url": "http://localhost:8200",
        "authType": "token",
        "token": "secret",
        "username": "user",
        "password": "secret",
        "kv": {
            "enabled": true,
            "engineVersion": 2,
            "mountPoint": "kv",
            "path": "mamey/internal/api/appsettings"
        },
        "pki": {
            "enabled": false,
            "roleName": "fhg-internal-api",
            "commonName": "futurehead.group"
        },
        "lease": {
            "mongo": {
                "enabled": false,
                "type": "database",
                "roleName": "fhg-internal-api",
                "autoRenewal": true,
                "templates": {
                    "connectionString": "mongodb://{{username}}:{{password}}@localhost:27017"
                }
            }
        }
    }
}