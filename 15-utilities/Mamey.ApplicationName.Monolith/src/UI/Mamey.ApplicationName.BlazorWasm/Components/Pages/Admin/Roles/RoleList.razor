@using Mamey.ApplicationName.BlazorWasm.Models.Roles

@code {
    [Parameter] public IEnumerable<Role> Roles { get; set; }
}

<MudTable T="Role" Items="Roles" Hover="true" Striped="true">
    <HeaderContent>
        <MudTh>Role Name</MudTh>
        <MudTh>Permissions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.RoleName</MudTd>
        <MudTd>@string.Join(", ", context.Permissions)</MudTd>
    </RowTemplate>
</MudTable>
