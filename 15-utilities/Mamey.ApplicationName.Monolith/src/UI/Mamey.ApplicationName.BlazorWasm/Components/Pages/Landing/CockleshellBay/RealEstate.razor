@page "/cockleshell-bay/real-estate"

@using Mamey.BlazorWasm.Models

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="real-estate-page-container">
    <!-- Header Section -->
    <MudPaper Class="header-section" Elevation="0">
        <h1 class="page-title animate-slide-in">Real Estate Offerings</h1>
        <p class="page-subtitle animate-fade-in">
            Luxury, Sustainability, and Cultural Heritage in Every Offering
        </p>
    </MudPaper>

    <!-- Introduction Section -->
    <section class="section">
        <MudPaper Elevation="2" Class="section-paper">
            <h2 class="section-title animate-slide-in">Overview</h2>
            <p class="section-content animate-fade-in">
                Our smart city showcases a diverse selection of real estate options that blend modern amenities, environmentally friendly
                principles, and Indigenous cultural heritage. Each property is designed to foster community, sustainability, and a high
                quality of life.
            </p>
            <MudImage Width="800" Src="images/cockleshell-bay.png"></MudImage>
        </MudPaper>
    </section>

    <!-- Real Estate Options -->
    <section class="section">
        <CardHighlight Items="GetRealEstateOfferings()" />
    </section>

    <!-- Investment Benefits Section -->
    <section class="section">
        <MudPaper Elevation="2" Class="section-paper">
            <h2 class="section-title animate-slide-in">Investment Benefits</h2>
            <ul class="benefits-list animate-fade-in">
                <li>Properties align with sustainable and eco-friendly principles.</li>
                <li>Investment contributes to community development projects.</li>
                <li>Opportunities for real estate appreciation in a thriving smart city.</li>
            </ul>
        </MudPaper>
    </section>
</MudContainer>


