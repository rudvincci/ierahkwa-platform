@page "/products/crypto/empowering-opportunities"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="empowering-opportunities-page-container">
    <!-- Header Section -->
    <MudPaper Class="header-section" Elevation="0">
        <h1 class="page-title animate-slide-in">Empowering Opportunities with FHCT Coin</h1>
        <p class="page-subtitle animate-fade-in">
            Redefining Financial Inclusion Through Decentralized Solutions
        </p>
    </MudPaper>

    <!-- Introduction Section -->
    <section class="section">
        <MudPaper Elevation="2" Class="section-paper">
            <h2 class="section-title animate-slide-in">Overview</h2>
            <p class="section-content animate-fade-in">
                FHCT Coin is at the forefront of decentralized finance, offering Indigenous communities and users worldwide access to
                financial services that were once out of reach. By eliminating barriers, we aim to promote inclusivity and sustainable growth.
            </p>
        </MudPaper>
    </section>

    <!-- DeFi Use Cases Section -->
    <section class="section">
        <MudGrid Class="use-cases-grid">
            <MudItem xs="12" md="4" Class="use-case-item animate-zoom-in">
                <MudPaper Class="use-case-card">
                    <h3>Lending</h3>
                    <p>
                        Borrow and lend assets in a decentralized manner, eliminating the need for traditional banks and intermediaries.
                    </p>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" md="4" Class="use-case-item animate-zoom-in">
                <MudPaper Class="use-case-card">
                    <h3>Borrowing</h3>
                    <p>
                        Access funds using collateralized FHCT tokens, enabling liquidity without losing your holdings.
                    </p>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" md="4" Class="use-case-item animate-zoom-in">
                <MudPaper Class="use-case-card">
                    <h3>Yield Farming</h3>
                    <p>
                        Earn rewards by providing liquidity to the ecosystem, contributing to its stability and growth.
                    </p>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </section>

    <!-- Global Participation Section -->
    <section class="section">
        <MudPaper Elevation="2" Class="section-paper">
            <h2 class="section-title animate-slide-in">Global Participation</h2>
            <p class="section-content animate-fade-in">
                FHCT Coin connects Indigenous communities with the global economy, enabling seamless financial transactions without traditional banking
                limitations. Users can participate in governance, propose projects, and directly contribute to community development.
            </p>
        </MudPaper>
    </section>

    <!-- Financial Inclusion Section -->
    <section class="section">
        <MudPaper Elevation="2" Class="section-paper">
            <h2 class="section-title animate-slide-in">Financial Inclusion</h2>
            <p class="section-content animate-fade-in">
                With FHCT Coin, users gain access to essential financial services like lending, borrowing, and asset management. These decentralized solutions
                empower individuals to take control of their financial futures, fostering equity and growth across all communities.
            </p>
        </MudPaper>
    </section>
</MudContainer>


