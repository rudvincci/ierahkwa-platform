@page "/products/crypto/gas-pro"
@using Mamey.BlazorWasm.Models

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="gas-pro-currency-page-container">
    <!-- Header Section -->
    <MudPaper Class="header-section" Elevation="0">
        <h1 class="page-title animate-slide-in">Gas Pro Currency</h1>
        <p class="page-subtitle animate-fade-in">
            Enabling Seamless Transactions Across the FHCT Ecosystem
        </p>
    </MudPaper>

    <!-- Introduction Section -->
    <section class="section">
        <MudPaper Elevation="2" Class="section-paper">
            <h2 class="section-title animate-slide-in">Overview</h2>
            <p class="section-content animate-fade-in">
                Gas Pro Currency is the backbone of the FHCT ecosystem, facilitating efficient and secure transactions. Designed to power the
                smart city and other FHCT initiatives, it ensures scalability, transparency, and economic efficiency for all participants.
            </p>
        </MudPaper>
    </section>

    <!-- Key Features Section -->
    <section class="section">
        <CardHighlight Items="GetKeyFeatures()" />
    </section>

    <!-- Benefits Section -->
    <section class="section">
        <MudPaper Elevation="2" Class="section-paper">
            <h2 class="section-title animate-slide-in">Why Use Gas Pro?</h2>
            <ul class="benefits-list animate-fade-in">
                <li>Efficient and low-cost transactions for users and businesses.</li>
                <li>Secure and transparent operations backed by blockchain technology.</li>
                <li>Eco-conscious design promotes sustainable practices.</li>
                <li>Ensures smooth integration and operation within the FHCT ecosystem.</li>
            </ul>
        </MudPaper>
    </section>
</MudContainer>


@code {
    private List<FeaturedProduct> GetKeyFeatures()
    {
        return new List<FeaturedProduct>()
        {
            new FeaturedProduct()
            {
                Title = "Low Transaction Fees",
                Description = "Gas Pro minimizes transaction costs, enabling users to participate in various activities without financial strain.",
                ImageUrl = "https://via.placeholder.com/300",
                Id = 1,
            },
            new FeaturedProduct()
            {
                Title = "Scalable and Fast",
                Description = "Designed to handle high volumes of transactions with minimal delays, making it suitable for everyday use.",
                ImageUrl = "https://via.placeholder.com/300",
                Id = 2,
            },
            new FeaturedProduct()
            {
                Title = "Eco-Friendly",
                Description = "Powered by renewable energy sources, Gas Pro supports sustainable development and reduces environmental impact.",
                ImageUrl = "https://via.placeholder.com/300",
                Id = 3,
            },
            new FeaturedProduct()
            {
                Title = "Integrated with FHCT Ecosystem",
                Description = "Seamlessly connects all FHCT initiatives, including the smart city, crypto casino, and real estate projects.",
                ImageUrl = "https://via.placeholder.com/300",
                Id = 4,
            },
        };
    }
}