@page "/products/crypto/buy-tokens"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="buy-tokens-page-container">
    <!-- Header Section -->
    <MudPaper Class="header-section" Elevation="0">
        <h1 class="page-title animate-slide-in">How to Buy FHCT Tokens</h1>
        <p class="page-subtitle animate-fade-in">
            A Simple Guide to Start Using FHCT Tokens
        </p>
    </MudPaper>

    <!-- Introduction Section -->
    <section class="section">
        <MudPaper Elevation="2" Class="section-paper">
            <h2 class="section-title animate-slide-in">Introduction</h2>
            <p class="section-content animate-fade-in">
                FHCT tokens empower Indigenous communities and support sustainable initiatives. Follow these easy steps to join our ecosystem and make an impact.
            </p>
        </MudPaper>
    </section>

    <!-- Steps to Buy Tokens Section -->
    
    <section class="section">
        <InstallToken />
        <MudPaper Elevation="2" Class="section-paper">
            <h2 class="section-title animate-slide-in">Steps to Buy FHCT Tokens</h2>
            <ol class="steps-list animate-fade-in">
                <li>
                    <strong>Step 1:</strong> Download a compatible wallet like Trust Wallet or MetaMask to securely manage your tokens.
                </li>
                <li>
                    <strong>Step 2:</strong> Add the FHCT token contract address:
                    <code>0xb8A58E3FD883b0230F4B47C4319e68CB7bB22339</code>.
                </li>
                <li>
                    <strong>Step 3:</strong> Purchase FHCT tokens using cryptocurrency or fiat currency through the Futurehead Bit Exchange.
                </li>
                <li>
                    <strong>Step 4:</strong> Start using FHCT tokens to participate in governance, projects, and community-driven initiatives.
                </li>
            </ol>
        </MudPaper>
    </section>

    <!-- Benefits Section -->
    <section class="section">
        <MudPaper Elevation="2" Class="section-paper">
            <h2 class="section-title animate-slide-in">Why Choose FHCT Tokens?</h2>
            <ul class="benefits-list animate-fade-in">
                <li>Empower Indigenous communities and promote sustainable development.</li>
                <li>Engage in a transparent and secure decentralized ecosystem.</li>
                <li>Contribute to community-driven initiatives and cultural preservation.</li>
                <li>Earn rewards through staking and participate in governance.</li>
            </ul>
        </MudPaper>
    </section>
</MudContainer>


