@page "/products/crypto/exchange"

@using Mamey.BlazorWasm.Models

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="exchange-page-container">
    <!-- Header Section -->
    <MudPaper Class="header-section" Elevation="0">
        <h1 class="page-title animate-slide-in">Futurehead Bit Exchange</h1>
        <p class="page-subtitle animate-fade-in">
            Secure, User-Friendly Cryptocurrency Trading
        </p>
    </MudPaper>

    <!-- Introduction Section -->
    <section class="section">
        <MudPaper Elevation="2" Class="section-paper">
            <h2 class="section-title animate-slide-in">Overview</h2>
            <p class="section-content animate-fade-in">
                The Futurehead Bit Exchange is a cornerstone of the FHCT ecosystem, offering a secure and accessible platform for trading FHCT
                Coins and other cryptocurrencies. Designed for inclusivity and convenience, it empowers users with the tools they need for
                seamless crypto trading.
            </p>
        </MudPaper>
    </section>

    <!-- Features Section -->
    <section class="section">
        <CardHighlight Items="GetFeatures()" />
    </section>

    <!-- How to Get Started Section -->
    <section class="section">
        <MudPaper Elevation="2" Class="section-paper">
            <h2 class="section-title animate-slide-in">How to Get Started</h2>
            <ul class="steps-list animate-fade-in">
                <li>Create an account on the Futurehead Bit Exchange platform.</li>
                <li>Verify your identity to ensure compliance and security.</li>
                <li>Fund your account using credit card payments or crypto deposits.</li>
                <li>Start trading FHCT Coins and other cryptocurrencies.</li>
            </ul>
        </MudPaper>
    </section>
</MudContainer>


