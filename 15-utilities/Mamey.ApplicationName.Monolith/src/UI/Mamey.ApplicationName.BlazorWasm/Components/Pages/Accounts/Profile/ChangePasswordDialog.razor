<MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="OpenDialog">Change Password</MudButton>

<MudDialog @ref="dialogRef" MaxWidth="MaxWidth.Small">
    <DialogContent>
        <MudTextField T="string" Label="Current Password" InputType="InputType.Password" />
        <MudTextField T="string" Label="New Password" InputType="InputType.Password" />
        <MudTextField T="string" Label="Confirm New Password" InputType="InputType.Password" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="ChangePassword">Change Password</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private MudDialog dialogRef;

    private async Task OpenDialog() => await dialogRef.ShowAsync();

    private async Task ChangePassword()
    {
        // Password change logic
        dialogRef.CloseAsync();
    }
}