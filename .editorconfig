root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{js,ts,tsx,jsx}]
indent_style = space
indent_size = 2

[*.{cs,razor}]
indent_style = space
indent_size = 4

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{sh,bash}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{rs,toml}]
indent_style = space
indent_size = 4

[*.{go}]
indent_style = tab

[*.{py}]
indent_style = space
indent_size = 4

[*.{sol}]
indent_style = space
indent_size = 4

[*.proto]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = space
indent_size = 2
