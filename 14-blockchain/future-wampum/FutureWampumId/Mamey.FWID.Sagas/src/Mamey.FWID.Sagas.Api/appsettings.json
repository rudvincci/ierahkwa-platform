{
  "app": {
    "name": "Mamey - FutureWampumID Saga Service",
    "version": "1.0.0"
  },
  "auth": {
    "algorithm": "HS512",
    "issuerSigningKey": "eiquief5phee9pazo0Faegaez9gohThailiur5woy2befiech1oarai4aiLi6ahVecah3ie9Aiz6Peij",
    "issuer": "auth.mamey.io",
    "validIssuer": "auth.mamey.io",
    "audience": "localhost",
    "validateAudience": false,
    "validateIssuer": true,
    "validateLifetime": true,
    "expiry": "00.00:30:00",
    "expiryMinutes": 60,
    "refreshTokenLifetime": "00.00:30:00",
    "cookie": {
      "httpOnly": true,
      "sameSite": "none",
      "secure": true
    },
    "certificate": {
      "location": "certs/localhost.pfx",
      "password": "crypticpassword"
    }
  },
  "consul": {
    "enabled": true,
    "url": "http://localhost:8500",
    "service": "fwid-sagas-service",
    "address": "docker.for.mac.localhost",
    "port": "5006",
    "pingEnabled": true,
    "pingEndpoint": "ping",
    "pingInterval": 3,
    "removeAfterInterval": 3
  },
  "fabio": {
    "enabled": true,
    "url": "http://localhost:9999",
    "service": "fwid-sagas-service"
  },
  "logger": {
    "level": "information",
    "excludePaths": [ "/", "/ping", "/metrics" ],
    "excludeProperties": [
      "api_key",
      "access_key",
      "ApiKey",
      "ApiSecret",
      "ClientId",
      "ClientSecret",
      "ConnectionString",
      "Password",
      "Email",
      "Login",
      "Secret",
      "Token"
    ],
    "console": {
      "enabled": true
    },
    "elk": {
      "enabled": false,
      "url": "http://localhost:9200"
    },
    "file": {
      "enabled": false,
      "path": "logs/logs.txt",
      "interval": "day"
    },
    "seq": {
      "enabled": true,
      "url": "http://localhost:5341",
      "apiKey": "secret"
    },
    "tags": {}
  },
  "jaeger": {
    "enabled": true,
    "serviceName": "fwid-sagas-service",
    "udpHost": "localhost",
    "udpPort": 6831,
    "maxPacketSize": 0,
    "sampler": "const",
    "excludePaths": [ "/", "/ping", "/metrics" ]
  },
  "metrics": {
    "enabled": true,
    "influxEnabled": false,
    "prometheusEnabled": true,
    "influxUrl": "http://localhost:8086",
    "database": "fwid-sagas-service",
    "env": "local",
    "interval": 5
  },
  "mongo": {
    "connectionString": "mongodb://root:secret@localhost:27017/?authSource=admin",
    "database": "fwid-sagas-service",
    "seed": false
  },
  "rabbitMq": {
    "connectionName": "fwid-sagas",
    "retries": 3,
    "retryInterval": 2,
    "conventionsCasing": "snakeCase",
    "logger": {
      "enabled": true
    },
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [
      "localhost"
    ],
    "requestedConnectionTimeout": "00:00:30",
    "requestedHeartbeat": "00:01:00",
    "socketReadTimeout": "00:00:30",
    "socketWriteTimeout": "00:00:30",
    "continuationTimeout": "00:00:20",
    "handshakeContinuationTimeout": "00:00:10",
    "networkRecoveryInterval": "00:00:05",
    "exchange": {
      "declare": true,
      "durable": true,
      "autoDelete": false,
      "type": "topic",
      "name": "fwid-sagas"
    },
    "queue": {
      "declare": true,
      "durable": true,
      "exclusive": false,
      "autoDelete": false,
      "template": "fwid-sagas-service/{{exchange}}.{{message}}"
    },
    "context": {
      "enabled": true,
      "header": "message_context"
    },
    "spanContextHeader": "span_context"
  },
  "redis": {
    "connectionString": "localhost",
    "instance": "fwid-sagas:"
  },
  "swagger": {
    "enabled": true,
    "reDocEnabled": false,
    "name": "v1",
    "title": "FutureWampumID Saga Service API",
    "version": "v1",
    "routePrefix": "docs",
    "includeSecurity": true
  },
  "vault": {
    "enabled": false,
    "url": "http://localhost:8200",
    "authType": "token",
    "token": "secret",
    "username": "user",
    "password": "secret",
    "kv": {
      "enabled": true,
      "engineVersion": 2,
      "mountPoint": "kv",
      "path": "mamey/fwid-sagas-service/appsettings"
    },
    "pki": {
      "enabled": true,
      "roleName": "fwid-sagas-service",
      "commonName": "mameydigitalsolutions.com"
    },
    "lease": {
      "mongo": {
        "enabled": true,
        "type": "database",
        "roleName": "fwid-sagas-service",
        "autoRenewal": true,
        "templates": {
          "connectionString": "mongodb://{{username}}:{{password}}@localhost:27017"
        }
      }
    }
  }
}



