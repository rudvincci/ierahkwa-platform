		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5006",
			"type": "string"
		},
		{
			"key": "identityId",
			"value": "123e4567-e89b-12d3-a456-426614174000",
			"type": "string"
		},
		{
			"key": "zoneId",
			"value": "423e4567-e89b-12d3-a456-426614174000",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health & Info",
			"item": [
				{
					"name": "Root Endpoint (Server Status)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/",
							"host": ["{{baseUrl}}"],
							"path": [""]
						},
						"description": "Returns server status including uptime, CPU usage, memory usage, disk space, app name, version, and timestamp"
					}
				},
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": ["{{baseUrl}}"],
							"path": ["health"]
						}
					}
				}
			]
		},
		{
			"name": "Saga Routes",
			"item": [
				{
					"name": "Start Identity Registration Saga",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"identityId\": \"{{identityId}}\",\n  \"name\": {\n    \"firstName\": \"John\",\n    \"middleName\": \"Michael\",\n    \"lastName\": \"Doe\",\n    \"suffix\": \"Jr.\"\n  },\n  \"personalDetails\": {\n    \"dateOfBirth\": \"1990-01-15T00:00:00Z\",\n    \"placeOfBirth\": \"Springfield, IL\",\n    \"gender\": \"Male\",\n    \"nationality\": \"USA\"\n  },\n  \"contactInformation\": {\n    \"email\": \"john.doe@example.com\",\n    \"phone\": {\n      \"number\": \"555-1234\",\n      \"type\": \"Mobile\"\n    },\n    \"address\": {\n      \"street\": \"123 Main St\",\n      \"city\": \"Springfield\",\n      \"state\": \"IL\",\n      \"zipCode\": \"62701\",\n      \"country\": \"USA\",\n      \"type\": \"Residential\"\n    }\n  },\n  \"biometricData\": {\n    \"type\": \"Fingerprint\",\n    \"data\": \"base64encodedfingerprintdata\",\n    \"storageLocation\": \"minio://biometrics/fingerprints/{{identityId}}\"\n  },\n  \"zone\": \"zone-001\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/sagas/identity-registration",
							"host": ["{{baseUrl}}"],
							"path": ["api", "sagas", "identity-registration"]
						},
						"description": "Starts the Identity Registration saga which orchestrates the complete identity registration workflow across multiple FWID services"
					}
				},
				{
					"name": "Start Credential Issuance Saga",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"identityId\": \"{{identityId}}\",\n  \"credentialType\": \"Passport\",\n  \"claims\": {\n    \"passportNumber\": \"US123456789\",\n    \"givenNames\": \"John Michael\",\n    \"surname\": \"Doe\",\n    \"dateOfBirth\": \"1990-01-15\",\n    \"placeOfBirth\": \"Springfield, IL\",\n    \"nationality\": \"USA\",\n    \"sex\": \"M\",\n    \"dateOfIssue\": \"2024-01-01\",\n    \"dateOfExpiry\": \"2034-01-01\",\n    \"issuingAuthority\": \"US Department of State\"\n  },\n  \"issuerId\": \"issuer-001\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/sagas/credential-issuance",
							"host": ["{{baseUrl}}"],
							"path": ["api", "sagas", "credential-issuance"]
						},
						"description": "Starts the Credential Issuance saga which orchestrates the complete credential issuance workflow"
					}
				},
				{
					"name": "Start Access Control Granting Saga",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"identityId\": \"{{identityId}}\",\n  \"zoneId\": \"{{zoneId}}\",\n  \"permission\": \"Write\",\n  \"grantedBy\": \"admin-user-id\",\n  \"expiresAt\": \"2025-12-31T23:59:59Z\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/sagas/access-control-granting",
							"host": ["{{baseUrl}}"],
							"path": ["api", "sagas", "access-control-granting"]
						},
						"description": "Starts the Access Control Granting saga which orchestrates the complete access control granting workflow"
					}
				}
			]
		}
	]
}


