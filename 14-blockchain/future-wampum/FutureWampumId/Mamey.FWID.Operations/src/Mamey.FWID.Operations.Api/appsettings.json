{
  "app": {
    "name": "Mamey - FutureWampumID Operations Service",
    "version": "1.0.0"
  },
  "requests": {
    "expirySeconds": 3600
  },
  "consul": {
    "enabled": true,
    "url": "http://localhost:8500",
    "service": "fwid-operations-service",
    "address": "docker.for.mac.localhost",
    "port": "5007",
    "pingEnabled": true,
    "pingEndpoint": "ping",
    "pingInterval": 3,
    "removeAfterInterval": 3
  },
  "fabio": {
    "enabled": true,
    "url": "http://localhost:9999",
    "service": "fwid-operations-service"
  },
  "logger": {
    "level": "information",
    "excludePaths": [ "/", "/ping", "/metrics" ],
    "excludeProperties": [
      "api_key",
      "access_key",
      "ApiKey",
      "ApiSecret",
      "ClientId",
      "ClientSecret",
      "ConnectionString",
      "Password",
      "Email",
      "Login",
      "Secret",
      "Token"
    ],
    "console": {
      "enabled": true
    },
    "elk": {
      "enabled": false,
      "url": "http://localhost:9200"
    },
    "file": {
      "enabled": false,
      "path": "logs/logs.txt",
      "interval": "day"
    },
    "seq": {
      "enabled": true,
      "url": "http://localhost:5341",
      "apiKey": "secret"
    },
    "tags": {}
  },
  "jaeger": {
    "enabled": true,
    "serviceName": "fwid-operations-service",
    "udpHost": "localhost",
    "udpPort": 6831,
    "maxPacketSize": 0,
    "sampler": "const",
    "excludePaths": [ "/", "/ping", "/metrics" ]
  },
  "metrics": {
    "enabled": true,
    "influxEnabled": false,
    "prometheusEnabled": true,
    "influxUrl": "http://localhost:8086",
    "database": "fwid-operations-service",
    "env": "local",
    "interval": 5
  },
  "redis": {
    "connectionString": "localhost",
    "instance": "fwid-operations:"
  },
  "rabbitMq": {
    "connectionName": "fwid-operations",
    "retries": 3,
    "retryInterval": 2,
    "conventionsCasing": "snakeCase",
    "logger": {
      "enabled": true
    },
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [
      "localhost"
    ],
    "requestedConnectionTimeout": "00:00:30",
    "requestedHeartbeat": "00:01:00",
    "socketReadTimeout": "00:00:30",
    "socketWriteTimeout": "00:00:30",
    "continuationTimeout": "00:00:20",
    "handshakeContinuationTimeout": "00:00:10",
    "networkRecoveryInterval": "00:00:05",
    "exchange": {
      "declare": true,
      "durable": true,
      "autoDelete": false,
      "type": "topic",
      "name": "fwid-operations"
    },
    "queue": {
      "declare": true,
      "durable": true,
      "exclusive": false,
      "autoDelete": false,
      "template": "fwid-operations-service/{{exchange}}.{{message}}"
    },
    "context": {
      "enabled": true,
      "header": "message_context"
    },
    "spanContextHeader": "span_context"
  },
  "swagger": {
    "enabled": true,
    "reDocEnabled": false,
    "name": "v1",
    "title": "FutureWampumID Operations Service API",
    "version": "v1",
    "routePrefix": "docs",
    "includeSecurity": true
  },
  "security": {
    "encryptionKey": "super-duper-secret-key**",
    "recovery": {
      "issuer": "ink.org",
      "expiry": "00:02:00",
      "allowedEndpoints": [ "/reset-password" ]
    },
    "certificate": {
      "enabled": true,
      "header": "Certificate",
      "skipRevocationCheck": false,
      "allowedDomains": [ "mamey.io" ],
      "allowSubdomains": true,
      "allowedHosts": [
        "localhost"
      ],
      "acl": {
        "wallets-service": {
          "validIssuer": "localhost",
          "permissions": [
            "users:read"
          ]
        },
        "identities-service": {
          "validIssuer": "localhost",
          "permissions": [
            "operations:read",
            "operations:write"
          ]
        }
      }
    },
    "encryption": {
      "enabled": true,
      "key": "super-duper-secret-key**12345678"
    }
  },
  "vault": {
    "enabled": false,
    "url": "http://localhost:8200",
    "authType": "token",
    "token": "secret",
    "username": "user",
    "password": "secret",
    "kv": {
      "enabled": true,
      "engineVersion": 2,
      "mountPoint": "kv",
      "path": "mamey/fwid-operations-service/appsettings"
    },
    "pki": {
      "enabled": true,
      "roleName": "fwid-operations-service",
      "commonName": "mameydigitalsolutions.com"
    },
    "lease": {
      "mongo": {
        "enabled": true,
        "type": "database",
        "roleName": "fwid-operations-service",
        "autoRenewal": true,
        "templates": {
          "connectionString": "mongodb://{{username}}:{{password}}@localhost:27017"
        }
      }
    }
  }
}



