# Maestro Docker Environment Variables
# Copy to .env and customize for your needs
# This file is excluded from git

# Your repository path (absolute path on host)
WORKSPACE_PATH=/path/to/your/repository

# Dashboard port
DASHBOARD_PORT=3000

# MCP server port
MCP_PORT=3001

# Cursor agent path (if installed on host)
# Leave empty if cursor-agent is installed in container
CURSOR_AGENT_PATH=/usr/local/bin/cursor-agent

# Optional: Git credentials for private sync
# GIT_USERNAME=your-username
# GIT_EMAIL=your-email@example.com
