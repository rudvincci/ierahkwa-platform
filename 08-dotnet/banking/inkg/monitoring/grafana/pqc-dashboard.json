{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "MameyNode Post-Quantum Cryptography Operations Dashboard",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "PQC Overview",
      "type": "row",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },
    {
      "title": "Signature Operations/sec",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "sum(rate(pqc_signatures_total[5m]))",
          "legendFormat": "Signatures/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          },
          "unit": "ops"
        }
      }
    },
    {
      "title": "Avg Signature Duration",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(pqc_signature_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95 Latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.05 },
              { "color": "red", "value": 0.1 }
            ]
          },
          "unit": "s"
        }
      }
    },
    {
      "title": "Key Generation Rate",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": "sum(rate(pqc_key_generation_total[5m]))",
          "legendFormat": "Keys/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          },
          "unit": "ops"
        }
      }
    },
    {
      "title": "Validation Failures",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "targets": [
        {
          "expr": "sum(rate(pqc_validation_failures_total[5m]))",
          "legendFormat": "Failures/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          },
          "unit": "ops"
        }
      }
    },
    {
      "title": "PQC vs Classical Signature Ratio",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 5 },
      "targets": [
        {
          "expr": "sum(rate(pqc_signatures_total[1h]))",
          "legendFormat": "PQC"
        },
        {
          "expr": "sum(rate(mamey_classical_signatures_total[1h]))",
          "legendFormat": "Classical"
        },
        {
          "expr": "sum(rate(pqc_hybrid_signatures_total[1h]))",
          "legendFormat": "Hybrid"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "title": "Signature Operations by Algorithm",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 16, "x": 8, "y": 5 },
      "targets": [
        {
          "expr": "sum(rate(pqc_signatures_total[5m])) by (algorithm)",
          "legendFormat": "{{ algorithm }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "group": "A", "mode": "none" }
          },
          "unit": "ops"
        }
      }
    },
    {
      "title": "Signature Duration Distribution",
      "type": "heatmap",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 13 },
      "targets": [
        {
          "expr": "sum(rate(pqc_signature_duration_seconds_bucket[5m])) by (le)",
          "legendFormat": "{{ le }}",
          "format": "heatmap"
        }
      ],
      "options": {
        "calculate": false,
        "yAxis": {
          "axisPlacement": "left",
          "unit": "s"
        }
      }
    },
    {
      "title": "Key Generation by Algorithm",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 13 },
      "targets": [
        {
          "expr": "sum(rate(pqc_key_generation_total[5m])) by (algorithm)",
          "legendFormat": "{{ algorithm }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80
          },
          "unit": "ops"
        }
      }
    },
    {
      "title": "Migration Progress",
      "type": "row",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 21 }
    },
    {
      "title": "Key Migration Progress",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 22 },
      "targets": [
        {
          "expr": "sum(mamey_pqc_keys_total) / (sum(mamey_pqc_keys_total) + sum(mamey_classical_keys_total)) * 100",
          "legendFormat": "% PQC Keys"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 80 }
            ]
          },
          "min": 0,
          "max": 100,
          "unit": "percent"
        }
      }
    },
    {
      "title": "Active PQC Keys",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 22 },
      "targets": [
        {
          "expr": "sum(mamey_pqc_keys_total)",
          "legendFormat": "PQC Keys"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "title": "Classical Keys Remaining",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 22 },
      "targets": [
        {
          "expr": "sum(mamey_classical_keys_total)",
          "legendFormat": "Classical Keys"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 1000 }
            ]
          },
          "unit": "short"
        }
      }
    }
  ],
  "schemaVersion": 37,
  "style": "dark",
  "tags": ["mameynode", "pqc", "security", "cryptography"],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": { "selected": true, "text": "Prometheus", "value": "Prometheus" }
      },
      {
        "name": "algorithm",
        "type": "query",
        "query": "label_values(pqc_signatures_total, algorithm)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "MameyNode PQC Dashboard",
  "uid": "mameynode-pqc",
  "version": 1,
  "weekStart": ""
}


