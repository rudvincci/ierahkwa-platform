@page "/banking/credit-risk"
@using MameyNode.Portals.Shared.Components.Layout
@using MameyNode.Portals.Shared.Components.DataDisplay
@using MameyNode.Portals.Mocks.Interfaces
@using MameyNode.Portals.Mocks.Models
@using MudBlazor
@inject IFBDETBClient FBDETBClient
@inject ILogger<CreditRisk> Logger
@rendermode InteractiveServer

<PageContainer>
    <SectionHeader Title="Credit Risk" Icon="fas fa-exclamation-triangle" Subtitle="Credit risk monitoring">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="RefreshData" StartIcon="@Icons.Material.Filled.Refresh">
            Refresh
        </MudButton>
    </SectionHeader>

    <MudGrid Spacing="3" Class="mt-4">
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Risks" Value="@_risks.Count.ToString()" Icon="fas fa-exclamation-triangle" Color="#3B82F6" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="High Risk" Value="@_highRiskCount.ToString()" Icon="fas fa-exclamation-circle" Color="#EF4444" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Avg Risk Score" Value="@_avgRiskScore.ToString("F0")" Icon="fas fa-chart-bar" Color="#F59E0B" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Critical" Value="@_criticalCount.ToString()" Icon="fas fa-skull" Color="#EF4444" />
        </MudItem>
    </MudGrid>

    <CardContainer Title="Credit Risks" Class="mt-4">
        <MudTable T="CreditRiskInfo" Items="@_risks" Hover="true" Dense="false" Striped="true" Elevation="0">
            <HeaderContent>
                <MudTh>Risk ID</MudTh>
                <MudTh>Account</MudTh>
                <MudTh>Risk Score</MudTh>
                <MudTh>Risk Level</MudTh>
                <MudTh>Risk Factors</MudTh>
                <MudTh>Assessed</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.RiskId</MudTd>
                <MudTd>@context.AccountId</MudTd>
                <MudTd>@decimal.Parse(context.RiskScore).ToString("F0")</MudTd>
                <MudTd>
                    <MudChip T="string" Size="Size.Small" Color="@(context.RiskLevel == "Critical" ? Color.Error : context.RiskLevel == "High" ? Color.Warning : context.RiskLevel == "Medium" ? Color.Info : Color.Success)">
                        @context.RiskLevel
                    </MudChip>
                </MudTd>
                <MudTd>@string.Join(", ", context.RiskFactors)</MudTd>
                <MudTd>@context.AssessedAt.ToString("yyyy-MM-dd")</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </CardContainer>
</PageContainer>

@code {
    private List<CreditRiskInfo> _risks = new();
    private int _highRiskCount;
    private decimal _avgRiskScore;
    private int _criticalCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _risks = await FBDETBClient.GetCreditRisksAsync();
            _highRiskCount = _risks.Count(r => r.RiskLevel == "High" || r.RiskLevel == "Critical");
            _avgRiskScore = _risks.Any() ? _risks.Average(r => decimal.Parse(r.RiskScore)) : 0;
            _criticalCount = _risks.Count(r => r.RiskLevel == "Critical");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading credit risks");
        }
    }

    private async Task RefreshData()
    {
        await LoadDataAsync();
        StateHasChanged();
    }
}

