@page "/banking/accounts"
@using MameyNode.Portals.Shared.Components.Layout
@using MameyNode.Portals.Shared.Components.DataDisplay
@using MameyNode.Portals.Mocks.Interfaces
@using MameyNode.Portals.Mocks.Models
@using MudBlazor
@inject IFBDETBClient FBDETBClient
@inject ILogger<Accounts> Logger
@rendermode InteractiveServer

<PageContainer>
    <SectionHeader Title="Accounts" Icon="fas fa-wallet" Subtitle="Account management">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="RefreshData" StartIcon="@Icons.Material.Filled.Refresh">
            Refresh
        </MudButton>
    </SectionHeader>

    <MudGrid Spacing="3" Class="mt-4">
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Accounts" Value="@_accounts.Count.ToString()" Icon="fas fa-wallet" Color="#3B82F6" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Balance" Value="@_totalBalance.ToString("C")" Icon="fas fa-dollar-sign" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Active" Value="@_activeCount.ToString()" Icon="fas fa-check-circle" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Wallets" Value="@_wallets.Count.ToString()" Icon="fas fa-wallet" Color="#F59E0B" />
        </MudItem>
    </MudGrid>

    <CardContainer Title="Accounts" Class="mt-4">
        <MudTable T="AccountInfo" Items="@_accounts" Hover="true" Dense="false" Striped="true" Elevation="0">
            <HeaderContent>
                <MudTh>Account ID</MudTh>
                <MudTh>Type</MudTh>
                <MudTh>Balance</MudTh>
                <MudTh>Currency</MudTh>
                <MudTh>Status</MudTh>
                <MudTh>Created</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.AccountId</MudTd>
                <MudTd>@context.AccountType</MudTd>
                <MudTd>@decimal.Parse(context.Balance).ToString("C")</MudTd>
                <MudTd>@context.Currency</MudTd>
                <MudTd>
                    <MudChip T="string" Size="Size.Small" Color="@(context.Status == AccountStatus.Active ? Color.Success : Color.Default)">
                        @context.Status
                    </MudChip>
                </MudTd>
                <MudTd>@context.CreatedAt.ToString("yyyy-MM-dd")</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </CardContainer>
</PageContainer>

@code {
    private List<AccountInfo> _accounts = new();
    private List<WalletInfo> _wallets = new();
    private decimal _totalBalance;
    private int _activeCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _accounts = await FBDETBClient.GetAccountsAsync();
            _wallets = await FBDETBClient.GetWalletsAsync();
            _totalBalance = _accounts.Sum(a => decimal.Parse(a.Balance));
            _activeCount = _accounts.Count(a => a.Status == AccountStatus.Active);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading accounts");
        }
    }

    private async Task RefreshData()
    {
        await LoadDataAsync();
        StateHasChanged();
    }
}

