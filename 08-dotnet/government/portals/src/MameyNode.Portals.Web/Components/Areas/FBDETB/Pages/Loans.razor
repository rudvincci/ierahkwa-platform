@page "/banking/loans"
@using MameyNode.Portals.Shared.Components.Layout
@using MameyNode.Portals.Shared.Components.DataDisplay
@using MameyNode.Portals.Mocks.Interfaces
@using MameyNode.Portals.Mocks.Models
@using MudBlazor
@inject IFBDETBClient FBDETBClient
@inject ILogger<Loans> Logger
@rendermode InteractiveServer

<PageContainer>
    <SectionHeader Title="Loans" Icon="fas fa-file-invoice-dollar" Subtitle="Loan management">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="RefreshData" StartIcon="@Icons.Material.Filled.Refresh">
            Refresh
        </MudButton>
    </SectionHeader>

    <MudGrid Spacing="3" Class="mt-4">
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Loans" Value="@_loans.Count.ToString()" Icon="fas fa-file-invoice-dollar" Color="#3B82F6" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Outstanding" Value="@_totalOutstanding.ToString("C")" Icon="fas fa-dollar-sign" Color="#EF4444" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Active" Value="@_activeCount.ToString()" Icon="fas fa-check-circle" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Avg Interest" Value="@_avgInterestRateText" Icon="fas fa-percentage" Color="#F59E0B" />
        </MudItem>
    </MudGrid>

    <CardContainer Title="Loans" Class="mt-4">
        <MudTable T="LoanInfo" Items="@_loans" Hover="true" Dense="false" Striped="true" Elevation="0">
            <HeaderContent>
                <MudTh>Loan ID</MudTh>
                <MudTh>Borrower</MudTh>
                <MudTh>Amount</MudTh>
                <MudTh>Interest Rate</MudTh>
                <MudTh>Remaining</MudTh>
                <MudTh>Status</MudTh>
                <MudTh>Created</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.LoanId</MudTd>
                <MudTd>@context.BorrowerId</MudTd>
                <MudTd>@decimal.Parse(context.Amount).ToString("C")</MudTd>
                <MudTd>@decimal.Parse(context.InterestRate).ToString("F2")%</MudTd>
                <MudTd>@decimal.Parse(context.RemainingBalance).ToString("C")</MudTd>
                <MudTd>
                    <MudChip T="string" Size="Size.Small" Color="@(context.Status == LoanStatus.Active ? Color.Success : context.Status == LoanStatus.Completed ? Color.Info : Color.Error)">
                        @context.Status
                    </MudChip>
                </MudTd>
                <MudTd>@context.CreatedAt.ToString("yyyy-MM-dd")</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </CardContainer>
</PageContainer>

@code {
    private List<LoanInfo> _loans = new();
    private decimal _totalOutstanding;
    private int _activeCount;
    private decimal _avgInterestRate;
    private string _avgInterestRateText = "0.00%";

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _loans = await FBDETBClient.GetLoansAsync();
            _totalOutstanding = _loans.Where(l => l.Status == LoanStatus.Active).Sum(l => decimal.Parse(l.RemainingBalance));
            _activeCount = _loans.Count(l => l.Status == LoanStatus.Active);
            _avgInterestRate = _loans.Any() ? _loans.Average(l => decimal.Parse(l.InterestRate)) : 0;
            _avgInterestRateText = $"{_avgInterestRate:F2}%";
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading loans");
        }
    }

    private async Task RefreshData()
    {
        await LoadDataAsync();
        StateHasChanged();
    }
}

