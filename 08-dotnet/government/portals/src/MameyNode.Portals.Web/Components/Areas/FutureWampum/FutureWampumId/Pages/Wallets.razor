@page "/futurewampum/identity/wallets"
@using MameyNode.Portals.Shared.Components.Layout
@using MameyNode.Portals.Shared.Components.DataDisplay
@using MameyNode.Portals.Mocks.Interfaces
@using MameyNode.Portals.Mocks.Models
@using MudBlazor
@inject IFutureWampumIdClient FutureWampumIdClient
@inject ILogger<Wallets> Logger
@rendermode InteractiveServer

<PageContainer>
    <SectionHeader Title="Identity Wallets" Icon="fas fa-wallet" Subtitle="Identity wallet management">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="RefreshData" StartIcon="@Icons.Material.Filled.Refresh">
            Refresh
        </MudButton>
    </SectionHeader>

    <MudGrid Spacing="3" Class="mt-4">
        <MudItem xs="12" md="4">
            <MetricCard Title="Total Wallets" Value="@_wallets.Count.ToString()" Icon="fas fa-wallet" Color="#3B82F6" />
        </MudItem>
        <MudItem xs="12" md="4">
            <MetricCard Title="Active" Value="@_activeCount.ToString()" Icon="fas fa-check-circle" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="4">
            <MetricCard Title="Total DIDs" Value="@_totalDIDs.ToString()" Icon="fas fa-key" Color="#F59E0B" />
        </MudItem>
    </MudGrid>

    <CardContainer Title="Identity Wallets" Class="mt-4">
        <MudTable T="IdentityWalletInfo" Items="@_wallets" Hover="true" Dense="false" Striped="true" Elevation="0">
            <HeaderContent>
                <MudTh>Wallet ID</MudTh>
                <MudTh>Identity ID</MudTh>
                <MudTh>Wallet Type</MudTh>
                <MudTh>DIDs</MudTh>
                <MudTh>Credentials</MudTh>
                <MudTh>Status</MudTh>
                <MudTh>Created</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.WalletId</MudTd>
                <MudTd>@context.IdentityId</MudTd>
                <MudTd>@context.WalletType</MudTd>
                <MudTd>@context.DIDs.Count</MudTd>
                <MudTd>@context.Credentials.Count</MudTd>
                <MudTd>
                    <MudChip T="string" Size="Size.Small" Color="@(context.IsActive ? Color.Success : Color.Default)">
                        @(context.IsActive ? "Active" : "Inactive")
                    </MudChip>
                </MudTd>
                <MudTd>@context.CreatedAt.ToString("yyyy-MM-dd")</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </CardContainer>
</PageContainer>

@code {
    private List<IdentityWalletInfo> _wallets = new();
    private int _activeCount;
    private int _totalDIDs;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _wallets = await FutureWampumIdClient.GetIdentityWalletsAsync();
            _activeCount = _wallets.Count(w => w.IsActive);
            _totalDIDs = _wallets.Sum(w => w.DIDs.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading identity wallets");
        }
    }

    private async Task RefreshData()
    {
        await LoadDataAsync();
        StateHasChanged();
    }
}

