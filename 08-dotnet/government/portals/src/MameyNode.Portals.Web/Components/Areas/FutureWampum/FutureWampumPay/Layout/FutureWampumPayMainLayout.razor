@* FutureWampumPayMainLayout.razor *@
@using MameyNode.Portals.Web.Components.Areas.FutureWampum.FutureWampumPay.Layout
@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudBreakpointProvider>
<MudLayout>
    <MudAppBar Elevation="0" Class="mud-appbar-glass">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6" Class="ml-3">FutureWampumPay</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/Mamey-io/Mamey" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="0" ClipMode="DrawerClipMode.Always" Class="mud-drawer-glass">
        <FutureWampumPayNavLayout DrawerOpen="_drawerOpen" />
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
</MudBreakpointProvider>

@code {
    bool _drawerOpen = true;
    private MudTheme _theme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = "#8B5CF6", // Purple - for payments theme
            Secondary = "#EC4899", // Pink accent
            Tertiary = "#10B981", // Green
            AppbarBackground = "rgba(88, 28, 135, 0.8)", // Purple glass
            Background = "#581C87", // Purple 800
            Surface = "rgba(139, 92, 246, 0.6)", // Purple glass
            DrawerBackground = "rgba(88, 28, 135, 0.9)", // Dark glass
            DrawerText = "#F3E8FF", // Purple 100
            TextPrimary = "#F8FAFC",
            TextSecondary = "#C4B5FD",
        }
    };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
