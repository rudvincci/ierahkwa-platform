@page "/futurewampum/identity/attestations"
@using MameyNode.Portals.Shared.Components.Layout
@using MameyNode.Portals.Shared.Components.DataDisplay
@using MameyNode.Portals.Mocks.Interfaces
@using MameyNode.Portals.Mocks.Models
@using MudBlazor
@inject IFutureWampumIdClient FutureWampumIdClient
@inject ILogger<Attestations> Logger
@rendermode InteractiveServer

<PageContainer>
    <SectionHeader Title="Attestations" Icon="fas fa-stamp" Subtitle="Identity attestation management">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="RefreshData" StartIcon="@Icons.Material.Filled.Refresh">
            Refresh
        </MudButton>
    </SectionHeader>

    <MudGrid Spacing="3" Class="mt-4">
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Attestations" Value="@_attestations.Count.ToString()" Icon="fas fa-stamp" Color="#3B82F6" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Verified" Value="@_verifiedCount.ToString()" Icon="fas fa-check-circle" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Active" Value="@_activeCount.ToString()" Icon="fas fa-check-double" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Attestation Types" Value="@_typeCount.ToString()" Icon="fas fa-tags" Color="#F59E0B" />
        </MudItem>
    </MudGrid>

    <CardContainer Title="Attestations" Class="mt-4">
        <MudTable T="AttestationInfo" Items="@_attestations" Hover="true" Dense="false" Striped="true" Elevation="0">
            <HeaderContent>
                <MudTh>Attestation ID</MudTh>
                <MudTh>Identity ID</MudTh>
                <MudTh>Attestation Type</MudTh>
                <MudTh>Attester</MudTh>
                <MudTh>Verified</MudTh>
                <MudTh>Status</MudTh>
                <MudTh>Created</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.AttestationId</MudTd>
                <MudTd>@context.IdentityId</MudTd>
                <MudTd>@context.AttestationType</MudTd>
                <MudTd>@context.AttesterId</MudTd>
                <MudTd>
                    <MudChip T="string" Size="Size.Small" Color="@(context.IsVerified ? Color.Success : Color.Warning)">
                        @(context.IsVerified ? "Yes" : "No")
                    </MudChip>
                </MudTd>
                <MudTd>
                    <MudChip T="string" Size="Size.Small" Color="@(context.Status == "Active" ? Color.Success : Color.Default)">
                        @context.Status
                    </MudChip>
                </MudTd>
                <MudTd>@context.CreatedAt.ToString("yyyy-MM-dd")</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </CardContainer>
</PageContainer>

@code {
    private List<AttestationInfo> _attestations = new();
    private int _verifiedCount;
    private int _activeCount;
    private int _typeCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _attestations = await FutureWampumIdClient.GetAttestationsAsync();
            _verifiedCount = _attestations.Count(a => a.IsVerified);
            _activeCount = _attestations.Count(a => a.Status == "Active");
            _typeCount = _attestations.Select(a => a.AttestationType).Distinct().Count();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading attestations");
        }
    }

    private async Task RefreshData()
    {
        await LoadDataAsync();
        StateHasChanged();
    }
}

