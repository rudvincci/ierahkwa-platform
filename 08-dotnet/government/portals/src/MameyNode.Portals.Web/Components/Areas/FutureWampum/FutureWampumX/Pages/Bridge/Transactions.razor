@page "/bridge/transactions"
@using MameyNode.Portals.Shared.Components.Layout
@using MameyNode.Portals.Shared.Components.DataDisplay
@using MameyNode.Portals.Mocks.Interfaces
@using MameyNode.Portals.Mocks.Models
@using MudBlazor
@inject IFutureWampumXClient FutureWampumXClient
@inject ILogger<Transactions> Logger
@rendermode InteractiveServer

<PageContainer>
    <SectionHeader Title="Bridge Transactions" Icon="fas fa-exchange-alt" Subtitle="Cross-chain bridge transaction management">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="RefreshData" StartIcon="@Icons.Material.Filled.Refresh">
            Refresh
        </MudButton>
    </SectionHeader>

    <MudGrid Spacing="3" Class="mt-4">
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Transactions" Value="@_transactions.Count.ToString()" Icon="fas fa-exchange-alt" Color="#3B82F6" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Volume" Value="@_totalVolume.ToString("C")" Icon="fas fa-dollar-sign" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Completed" Value="@_completedCount.ToString()" Icon="fas fa-check-circle" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Pending" Value="@_pendingCount.ToString()" Icon="fas fa-clock" Color="#F59E0B" />
        </MudItem>
    </MudGrid>

    <CardContainer Title="Bridge Transactions" Class="mt-4">
        <MudTable T="BridgedTransactionInfo" Items="@_transactions" Hover="true" Dense="false" Striped="true" Elevation="0">
            <HeaderContent>
                <MudTh>Bridge ID</MudTh>
                <MudTh>Source System</MudTh>
                <MudTh>Target System</MudTh>
                <MudTh>From Account</MudTh>
                <MudTh>To Account</MudTh>
                <MudTh>Amount</MudTh>
                <MudTh>Currency</MudTh>
                <MudTh>Status</MudTh>
                <MudTh>Bridged At</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.BridgeId</MudTd>
                <MudTd>@context.SourceSystem</MudTd>
                <MudTd>@context.TargetSystem</MudTd>
                <MudTd>@context.FromAccount</MudTd>
                <MudTd>@context.ToAccount</MudTd>
                <MudTd>@decimal.Parse(context.Amount ?? "0").ToString("F2")</MudTd>
                <MudTd>@context.Currency</MudTd>
                <MudTd>
                    <MudChip T="string" Size="Size.Small" Color="@(context.Status == BridgeStatus.Completed ? Color.Success : context.Status == BridgeStatus.Pending ? Color.Warning : Color.Error)">
                        @context.Status
                    </MudChip>
                </MudTd>
                <MudTd>@context.BridgedAt.ToString("yyyy-MM-dd HH:mm")</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </CardContainer>
</PageContainer>

@code {
    private List<BridgedTransactionInfo> _transactions = new();
    private decimal _totalVolume;
    private int _completedCount;
    private int _pendingCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _transactions = await FutureWampumXClient.GetBridgedTransactionsAsync();
            _totalVolume = _transactions.Where(t => t.Status == BridgeStatus.Completed).Sum(t => decimal.Parse(t.Amount ?? "0"));
            _completedCount = _transactions.Count(t => t.Status == BridgeStatus.Completed);
            _pendingCount = _transactions.Count(t => t.Status == BridgeStatus.Pending);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading bridge transactions");
        }
    }

    private async Task RefreshData()
    {
        await LoadDataAsync();
        StateHasChanged();
    }
}

