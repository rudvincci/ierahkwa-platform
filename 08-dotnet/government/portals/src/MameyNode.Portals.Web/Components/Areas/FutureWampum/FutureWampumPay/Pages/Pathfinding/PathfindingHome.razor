@page "/pathfinding"
@using MameyNode.Portals.Shared.Components.Layout
@using MameyNode.Portals.Shared.Components.DataDisplay
@using MudBlazor
@rendermode InteractiveServer

<PageContainer>
    <SectionHeader Title="Pathfinding" Icon="fas fa-route" Subtitle="Payment pathfinding services">
    </SectionHeader>

    <MudGrid Spacing="3" Class="mt-4">
        <MudItem xs="12" sm="6" md="4">
            <CardContainer Title="Pathfinder" Elevation="2">
                <MudText Typo="Typo.body2">Payment pathfinder</MudText>
                <MudButton Href="/pathfinding/pathfinder" Variant="Variant.Filled" Color="Color.Primary" Class="mt-2" FullWidth="true">
                    View Pathfinder
                </MudButton>
            </CardContainer>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <CardContainer Title="Currency Graph" Elevation="2">
                <MudText Typo="Typo.body2">Currency graph management</MudText>
                <MudButton Href="/pathfinding/currency-graph" Variant="Variant.Filled" Color="Color.Primary" Class="mt-2" FullWidth="true">
                    View Graph
                </MudButton>
            </CardContainer>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <CardContainer Title="Path Execution" Elevation="2">
                <MudText Typo="Typo.body2">Path execution services</MudText>
                <MudButton Href="/pathfinding/path-execution" Variant="Variant.Filled" Color="Color.Primary" Class="mt-2" FullWidth="true">
                    View Execution
                </MudButton>
            </CardContainer>
        </MudItem>
    </MudGrid>
</PageContainer>

