@page "/merchant/settlements"
@using MameyNode.Portals.Shared.Components.Layout
@using MameyNode.Portals.Shared.Components.DataDisplay
@using MameyNode.Portals.Mocks.Interfaces
@using MameyNode.Portals.Mocks.Models
@using MudBlazor
@inject IFutureWampumMerchantClient FutureWampumMerchantClient
@inject ILogger<Settlements> Logger
@rendermode InteractiveServer

<PageContainer>
    <SectionHeader Title="Settlements" Icon="fas fa-handshake" Subtitle="Merchant settlement management">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="RefreshData" StartIcon="@Icons.Material.Filled.Refresh">
            Refresh
        </MudButton>
    </SectionHeader>

    <MudGrid Spacing="3" Class="mt-4">
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Settlements" Value="@_settlements.Count.ToString()" Icon="fas fa-handshake" Color="#3B82F6" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Amount" Value="@_totalAmount.ToString("C")" Icon="fas fa-dollar-sign" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Completed" Value="@_completedCount.ToString()" Icon="fas fa-check-circle" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Pending" Value="@_pendingCount.ToString()" Icon="fas fa-clock" Color="#F59E0B" />
        </MudItem>
    </MudGrid>

    <CardContainer Title="Settlements" Class="mt-4">
        <MudTable T="SettlementInfo" Items="@_settlements" Hover="true" Dense="false" Striped="true" Elevation="0">
            <HeaderContent>
                <MudTh>Settlement ID</MudTh>
                <MudTh>Merchant ID</MudTh>
                <MudTh>Settlement Period</MudTh>
                <MudTh>Total Amount</MudTh>
                <MudTh>Fee Amount</MudTh>
                <MudTh>Net Amount</MudTh>
                <MudTh>Transactions</MudTh>
                <MudTh>Status</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.SettlementId</MudTd>
                <MudTd>@context.MerchantId</MudTd>
                <MudTd>@context.SettlementPeriod</MudTd>
                <MudTd>@decimal.Parse(context.TotalAmount).ToString("C")</MudTd>
                <MudTd>@decimal.Parse(context.FeeAmount).ToString("C")</MudTd>
                <MudTd>@decimal.Parse(context.NetAmount).ToString("C")</MudTd>
                <MudTd>@context.TransactionCount</MudTd>
                <MudTd>
                    <MudChip T="string" Size="Size.Small" Color="@(context.Status == SettlementStatus.Completed ? Color.Success : context.Status == SettlementStatus.Processing ? Color.Warning : Color.Default)">
                        @context.Status
                    </MudChip>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </CardContainer>
</PageContainer>

@code {
    private List<SettlementInfo> _settlements = new();
    private decimal _totalAmount;
    private int _completedCount;
    private int _pendingCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _settlements = await FutureWampumMerchantClient.GetSettlementsAsync();
            _totalAmount = _settlements.Sum(s => decimal.Parse(s.TotalAmount));
            _completedCount = _settlements.Count(s => s.Status == SettlementStatus.Completed);
            _pendingCount = _settlements.Count(s => s.Status == SettlementStatus.Pending);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading settlements");
        }
    }

    private async Task RefreshData()
    {
        await LoadDataAsync();
        StateHasChanged();
    }
}

