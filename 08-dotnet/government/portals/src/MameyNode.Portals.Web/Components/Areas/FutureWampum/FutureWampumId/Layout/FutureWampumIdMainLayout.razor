@* FutureWampumIdMainLayout.razor *@
@using MameyNode.Portals.Web.Components.Areas.FutureWampum.FutureWampumId.Layout
@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudBreakpointProvider>
<MudLayout>
    <MudAppBar Elevation="0" Class="mud-appbar-glass">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6" Class="ml-3">FutureWampumID</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/Mamey-io/Mamey" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="0" ClipMode="DrawerClipMode.Always" Class="mud-drawer-glass">
        <FutureWampumIdNavLayout DrawerOpen="_drawerOpen" />
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
</MudBreakpointProvider>

@code {
    bool _drawerOpen = true;
    private MudTheme _theme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = "#06B6D4", // Cyan - for identity theme
            Secondary = "#3B82F6", // Blue
            Tertiary = "#8B5CF6", // Purple
            AppbarBackground = "rgba(14, 116, 144, 0.8)", // Cyan glass
            Background = "#0E7490", // Cyan 700
            Surface = "rgba(6, 182, 212, 0.6)", // Cyan glass
            DrawerBackground = "rgba(14, 116, 144, 0.9)", // Dark glass
            DrawerText = "#CFFAFE", // Cyan 100
            TextPrimary = "#F8FAFC",
            TextSecondary = "#67E8F9",
        }
    };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
