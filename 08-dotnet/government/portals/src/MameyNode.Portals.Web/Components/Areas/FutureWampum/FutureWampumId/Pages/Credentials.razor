@page "/futurewampum/identity/credentials"
@using MameyNode.Portals.Shared.Components.Layout
@using MameyNode.Portals.Shared.Components.DataDisplay
@using MameyNode.Portals.Mocks.Interfaces
@using MameyNode.Portals.Mocks.Models
@using MudBlazor
@inject IFutureWampumIdClient FutureWampumIdClient
@inject ILogger<Credentials> Logger
@rendermode InteractiveServer

<PageContainer>
    <SectionHeader Title="Digital Credentials" Icon="fas fa-certificate" Subtitle="Digital credential management">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="RefreshData" StartIcon="@Icons.Material.Filled.Refresh">
            Refresh
        </MudButton>
    </SectionHeader>

    <MudGrid Spacing="3" Class="mt-4">
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Credentials" Value="@_credentials.Count.ToString()" Icon="fas fa-certificate" Color="#3B82F6" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Active" Value="@_activeCount.ToString()" Icon="fas fa-check-circle" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Revoked" Value="@_revokedCount.ToString()" Icon="fas fa-ban" Color="#EF4444" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Expired" Value="@_expiredCount.ToString()" Icon="fas fa-exclamation-triangle" Color="#F59E0B" />
        </MudItem>
    </MudGrid>

    <CardContainer Title="Digital Credentials" Class="mt-4">
        <MudTable T="DigitalCredentialInfo" Items="@_credentials" Hover="true" Dense="false" Striped="true" Elevation="0">
            <HeaderContent>
                <MudTh>Credential ID</MudTh>
                <MudTh>Identity ID</MudTh>
                <MudTh>Credential Type</MudTh>
                <MudTh>Issuer</MudTh>
                <MudTh>Status</MudTh>
                <MudTh>Issued</MudTh>
                <MudTh>Expiry</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.CredentialId</MudTd>
                <MudTd>@context.IdentityId</MudTd>
                <MudTd>@context.CredentialType</MudTd>
                <MudTd>@context.Issuer</MudTd>
                <MudTd>
                    <MudChip T="string" Size="Size.Small" Color="@(context.Status == "Active" ? Color.Success : context.Status == "Expired" ? Color.Warning : Color.Error)">
                        @context.Status
                    </MudChip>
                </MudTd>
                <MudTd>@context.IssuedAt.ToString("yyyy-MM-dd")</MudTd>
                <MudTd>@(context.ExpiryDate?.ToString("yyyy-MM-dd") ?? "-")</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </CardContainer>
</PageContainer>

@code {
    private List<DigitalCredentialInfo> _credentials = new();
    private int _activeCount;
    private int _revokedCount;
    private int _expiredCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _credentials = await FutureWampumIdClient.GetDigitalCredentialsAsync();
            _activeCount = _credentials.Count(c => c.Status == "Active");
            _revokedCount = _credentials.Count(c => c.IsRevoked);
            _expiredCount = _credentials.Count(c => c.ExpiryDate < DateTime.Now);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading digital credentials");
        }
    }

    private async Task RefreshData()
    {
        await LoadDataAsync();
        StateHasChanged();
    }
}

