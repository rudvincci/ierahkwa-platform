@page "/odl"
@using MameyNode.Portals.Shared.Components.Layout
@using MameyNode.Portals.Shared.Components.DataDisplay
@using MameyNode.Portals.Mocks.Interfaces
@using MameyNode.Portals.Mocks.Models
@using MudBlazor
@inject IODLClient ODLClient
@inject ILogger<ODLHome> Logger
@rendermode InteractiveServer

<PageContainer>
    <SectionHeader Title="On-Demand Liquidity" Icon="fas fa-exchange-alt" Subtitle="Liquidity management system">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="RefreshData" StartIcon="@Icons.Material.Filled.Refresh">
            Refresh
        </MudButton>
    </SectionHeader>

    <MudGrid Spacing="3" Class="mt-4">
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Operations" Value="@_operations.Count.ToString()" Icon="fas fa-exchange-alt" Color="#14B8A6" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Volume" Value="@_totalVolume.ToString("C")" Icon="fas fa-dollar-sign" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Completed" Value="@_completedCount.ToString()" Icon="fas fa-check-circle" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Pending" Value="@_pendingCount.ToString()" Icon="fas fa-clock" Color="#F59E0B" />
        </MudItem>
    </MudGrid>

    <CardContainer Title="ODL Operations" Class="mt-4">
        <MudTable T="ODLInfo" Items="@_operations" Hover="true" Dense="false" Striped="true" Elevation="0">
            <HeaderContent>
                <MudTh>ODL ID</MudTh>
                <MudTh>Provider</MudTh>
                <MudTh>From</MudTh>
                <MudTh>To</MudTh>
                <MudTh>Amount</MudTh>
                <MudTh>Rate</MudTh>
                <MudTh>Status</MudTh>
                <MudTh>Created</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.ODLId</MudTd>
                <MudTd>@context.ProviderId</MudTd>
                <MudTd>@context.FromCurrency</MudTd>
                <MudTd>@context.ToCurrency</MudTd>
                <MudTd>@decimal.Parse(context.Amount).ToString("C")</MudTd>
                <MudTd>@decimal.Parse(context.ExchangeRate).ToString("F4")</MudTd>
                <MudTd>
                    <MudChip T="string" Size="Size.Small" Color="@(context.Status == "Completed" ? Color.Success : context.Status == "Pending" ? Color.Warning : Color.Error)">
                        @context.Status
                    </MudChip>
                </MudTd>
                <MudTd>@context.CreatedAt.ToString("yyyy-MM-dd")</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </CardContainer>
</PageContainer>

@code {
    private List<ODLInfo> _operations = new();
    private decimal _totalVolume;
    private int _completedCount;
    private int _pendingCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _operations = await ODLClient.GetODLOperationsAsync();
            _totalVolume = _operations.Where(o => o.Status == "Completed").Sum(o => decimal.Parse(o.Amount));
            _completedCount = _operations.Count(o => o.Status == "Completed");
            _pendingCount = _operations.Count(o => o.Status == "Pending");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading ODL operations");
        }
    }

    private async Task RefreshData()
    {
        await LoadDataAsync();
        StateHasChanged();
    }
}

