@* SICBMainLayout.razor *@
@using MameyNode.Portals.Web.Components.Areas.SICB.Layout
@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudBreakpointProvider>
<MudLayout>
    <MudAppBar Elevation="0" Class="mud-appbar-glass">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6" Class="ml-3">SICB - Sovereign Ierahkwa Central Bank</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/Mamey-io/Mamey" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="0" ClipMode="DrawerClipMode.Always" Class="mud-drawer-glass">
        <SICBNavLayout DrawerOpen="_drawerOpen" />
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
</MudBreakpointProvider>

@code {
    bool _drawerOpen = true;
    private MudTheme _theme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = "#F59E0B", // Amber - for central bank/treasury theme
            Secondary = "#EF4444", // Red accent
            Tertiary = "#10B981", // Green
            AppbarBackground = "rgba(146, 64, 14, 0.8)", // Amber glass
            Background = "#1C1917", // Stone 900
            Surface = "rgba(180, 83, 9, 0.6)", // Amber glass
            DrawerBackground = "rgba(28, 25, 23, 0.9)", // Dark glass
            DrawerText = "#FEF3C7", // Amber 100
            TextPrimary = "#F8FAFC",
            TextSecondary = "#A8A29E",
        }
    };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
