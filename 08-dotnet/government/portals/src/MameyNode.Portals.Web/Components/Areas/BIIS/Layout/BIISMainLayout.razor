@* BIISMainLayout.razor *@
@using MameyNode.Portals.Web.Components.Areas.BIIS.Layout
@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudBreakpointProvider>
<MudLayout>
    <MudAppBar Elevation="0" Class="mud-appbar-glass">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6" Class="ml-3">BIIS - Bank of International Indigenous Settlements</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/Mamey-io/Mamey" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="0" ClipMode="DrawerClipMode.Always" Class="mud-drawer-glass">
        <BIISNavLayout DrawerOpen="_drawerOpen" />
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
</MudBreakpointProvider>

@code {
    bool _drawerOpen = true;
    private MudTheme _theme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = "#3B82F6", // Blue - for international/settlement theme
            Secondary = "#10B981", // Emerald
            Tertiary = "#8B5CF6", // Purple accent
            AppbarBackground = "rgba(30, 58, 138, 0.8)", // Blue glass
            Background = "#0F172A", // Slate 900
            Surface = "rgba(30, 64, 175, 0.6)", // Blue glass
            DrawerBackground = "rgba(15, 23, 42, 0.9)", // Dark glass
            DrawerText = "#E0E7FF", // Indigo 100
            TextPrimary = "#F8FAFC",
            TextSecondary = "#94A3B8",
        }
    };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
