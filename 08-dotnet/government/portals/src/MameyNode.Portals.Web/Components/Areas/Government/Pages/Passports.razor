@page "/admin/passports"
@using MameyNode.Portals.Shared.Components.Layout
@using MameyNode.Portals.Shared.Components.DataDisplay
@using MameyNode.Portals.Mocks.Interfaces
@using MameyNode.Portals.Mocks.Models
@using MudBlazor
@inject IGovernmentClient GovernmentClient
@inject ILogger<Passports> Logger
@rendermode InteractiveServer

<PageContainer>
    <SectionHeader Title="Passports" Icon="fas fa-passport" Subtitle="Passport management">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="RefreshData" StartIcon="@Icons.Material.Filled.Refresh">
            Refresh
        </MudButton>
    </SectionHeader>

    <MudGrid Spacing="3" Class="mt-4">
        <MudItem xs="12" md="3">
            <MetricCard Title="Total Passports" Value="@_passports.Count.ToString()" Icon="fas fa-passport" Color="#3B82F6" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Active" Value="@_activeCount.ToString()" Icon="fas fa-check-circle" Color="#10B981" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Expired" Value="@_expiredCount.ToString()" Icon="fas fa-exclamation-triangle" Color="#F59E0B" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MetricCard Title="Revoked" Value="@_revokedCount.ToString()" Icon="fas fa-ban" Color="#EF4444" />
        </MudItem>
    </MudGrid>

    <CardContainer Title="Passports" Class="mt-4">
        <MudTable T="PassportInfo" Items="@_passports" Hover="true" Dense="false" Striped="true" Elevation="0">
            <HeaderContent>
                <MudTh>Passport ID</MudTh>
                <MudTh>Citizen ID</MudTh>
                <MudTh>Passport Number</MudTh>
                <MudTh>Issuing Country</MudTh>
                <MudTh>Issued</MudTh>
                <MudTh>Expiry</MudTh>
                <MudTh>Status</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.PassportId</MudTd>
                <MudTd>@context.CitizenId</MudTd>
                <MudTd>@context.PassportNumber</MudTd>
                <MudTd>@context.IssuingCountry</MudTd>
                <MudTd>@context.IssuedAt.ToString("yyyy-MM-dd")</MudTd>
                <MudTd>@context.ExpiryDate.ToString("yyyy-MM-dd")</MudTd>
                <MudTd>
                    <MudChip T="string" Size="Size.Small" Color="@(context.Status == "Active" ? Color.Success : context.Status == "Expired" ? Color.Warning : Color.Error)">
                        @context.Status
                    </MudChip>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </CardContainer>
</PageContainer>

@code {
    private List<PassportInfo> _passports = new();
    private int _activeCount;
    private int _expiredCount;
    private int _revokedCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _passports = await GovernmentClient.GetPassportsAsync();
            _activeCount = _passports.Count(p => p.Status == "Active");
            _expiredCount = _passports.Count(p => p.Status == "Expired");
            _revokedCount = _passports.Count(p => p.Status == "Revoked");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading passports");
        }
    }

    private async Task RefreshData()
    {
        await LoadDataAsync();
        StateHasChanged();
    }
}

