@* GovernmentMainLayout.razor *@
@using MameyNode.Portals.Web.Components.Areas.Government.Layout
@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudBreakpointProvider>
<MudLayout>
    <MudAppBar Elevation="0" Class="mud-appbar-glass">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6" Class="ml-3">Government Services</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/Mamey-io/Mamey" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="0" ClipMode="DrawerClipMode.Always" Class="mud-drawer-glass">
        <GovernmentNavLayout DrawerOpen="_drawerOpen" />
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
</MudBreakpointProvider>

@code {
    bool _drawerOpen = true;
    private MudTheme _theme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = "#DC2626", // Red - for government/official theme
            Secondary = "#F59E0B", // Amber
            Tertiary = "#8B5CF6", // Purple
            AppbarBackground = "rgba(153, 27, 27, 0.8)", // Red glass
            Background = "#7F1D1D", // Red 900
            Surface = "rgba(220, 38, 38, 0.6)", // Red glass
            DrawerBackground = "rgba(127, 29, 29, 0.9)", // Dark glass
            DrawerText = "#FEE2E2", // Red 100
            TextPrimary = "#F8FAFC",
            TextSecondary = "#FCA5A5",
        }
    };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
