@namespace MameyNode.Portals.Shared.Components.DataDisplay

<MudCard Elevation="2" Class="ma-2">
    <MudCardContent>
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
            <MudStack Spacing="1">
                <MudText Typo="Typo.body1" Style="font-weight: 500;">@Description</MudText>
                <MudText Typo="Typo.caption" Color="Color.Secondary">@Date.ToString("MMM dd, yyyy HH:mm")</MudText>
            </MudStack>
            <MudStack AlignItems="AlignItems.End" Spacing="1">
                <MudText Typo="Typo.h6" Color="@GetAmountColor()">
                    @GetAmountPrefix()@Amount.ToString("N2")
                </MudText>
                <StatusBadge Status="@Status" />
            </MudStack>
        </MudStack>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public string Description { get; set; } = string.Empty;
    [Parameter] public decimal Amount { get; set; }
    [Parameter] public string Currency { get; set; } = "USD";
    [Parameter] public DateTime Date { get; set; } = DateTime.UtcNow;
    [Parameter] public string Status { get; set; } = "Pending";
    [Parameter] public bool IsCredit { get; set; } = false;

    private string GetAmountPrefix() => IsCredit ? "+" : "-";
    private Color GetAmountColor() => IsCredit ? Color.Success : Color.Default;
}


