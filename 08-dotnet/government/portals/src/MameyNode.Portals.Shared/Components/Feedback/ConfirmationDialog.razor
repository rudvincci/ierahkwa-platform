@namespace MameyNode.Portals.Shared.Components.Feedback

<MudDialog @bind-IsVisible="@IsVisible">
    <TitleContent>
        <MudText Typo="Typo.h6">@Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">@Message</MudText>
        @if (ChildContent != null)
        {
            @ChildContent
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">@CancelText</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="@Confirm">@ConfirmText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public string Title { get; set; } = "Confirm Action";
    [Parameter] public string Message { get; set; } = "Are you sure you want to proceed?";
    [Parameter] public string ConfirmText { get; set; } = "Confirm";
    [Parameter] public string CancelText { get; set; } = "Cancel";
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }

    private async Task Confirm()
    {
        IsVisible = false;
        if (OnConfirm.HasDelegate)
        {
            await OnConfirm.InvokeAsync();
        }
    }

    private async Task Cancel()
    {
        IsVisible = false;
        if (OnCancel.HasDelegate)
        {
            await OnCancel.InvokeAsync();
        }
    }
}
