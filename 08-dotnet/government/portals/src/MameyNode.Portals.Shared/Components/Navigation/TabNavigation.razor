@namespace MameyNode.Portals.Shared.Components.Navigation

<MudTabs Elevation="0" Rounded="true" Color="@Color" Position="@Position" @bind-ActivePanelIndex="@ActiveIndex">
    @if (Tabs != null)
    {
        @foreach (var tab in Tabs)
        {
            <MudTabPanel Text="@tab.Title" Icon="@tab.Icon">
                @tab.Content
            </MudTabPanel>
        }
    }
    @if (ChildContent != null)
    {
        @ChildContent
    }
</MudTabs>

@code {
    [Parameter] public List<TabNavigationItem>? Tabs { get; set; }
    [Parameter] public int ActiveIndex { get; set; } = 0;
    [Parameter] public EventCallback<int> ActiveIndexChanged { get; set; }
    [Parameter] public Color Color { get; set; } = Color.Primary;
    [Parameter] public Position Position { get; set; } = Position.Top;
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
