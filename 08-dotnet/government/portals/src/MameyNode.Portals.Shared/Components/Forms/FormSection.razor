@namespace MameyNode.Portals.Shared.Components.Forms

<MudExpansionPanels Elevation="0" Class="mb-4">
    <MudExpansionPanel Text="@Title" IsExpanded="@IsExpanded">
        @ChildContent
    </MudExpansionPanel>
</MudExpansionPanels>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public bool IsExpanded { get; set; } = true;
    [Parameter] public RenderFragment? ChildContent { get; set; }
}


