@namespace MameyNode.Portals.Shared.Components.Specialized
@using MameyNode.Portals.Shared.Components.Specialized

<MudStack Row="true" Spacing="-2" AlignItems="AlignItems.Center">
    @if (Avatars != null)
    {
        @foreach (var avatar in Avatars.Take(MaxVisible))
        {
            <MudAvatar 
                Size="@Size" 
                Image="@avatar.ImageUrl"
                Color="@avatar.Color">
                @if (string.IsNullOrEmpty(avatar.ImageUrl))
                {
                    @avatar.Initials
                }
            </MudAvatar>
        }
        @if (Avatars.Count > MaxVisible)
        {
            <MudAvatar Size="@Size" Color="Color.Default">
                +@(Avatars.Count - MaxVisible)
            </MudAvatar>
        }
    }
</MudStack>

@code {
    [Parameter] public List<AvatarInfo>? Avatars { get; set; }
    [Parameter] public int MaxVisible { get; set; } = 5;
    [Parameter] public Size Size { get; set; } = Size.Medium;
}
