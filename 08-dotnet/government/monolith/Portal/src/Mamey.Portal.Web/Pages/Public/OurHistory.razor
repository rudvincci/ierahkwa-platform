@page "/our-history"

<PageTitle>Our History</PageTitle>

<MudStack Spacing="3">
    <MudText Typo="Typo.h4">Our History</MudText>
    <MudText Typo="Typo.body1">
        UI-first placeholder content. This will be tenant-configured, pulled from CMS sections and library references.
    </MudText>

    <MudTimeline>
        <MudTimelineItem Color="Color.Primary" Icon="@Icons.Material.Filled.Flag">
            <ChildContent>
                <MudText Typo="Typo.h6">Foundational period</MudText>
                <MudText Typo="Typo.body2">Core legal/cultural foundations.</MudText>
            </ChildContent>
        </MudTimelineItem>
        <MudTimelineItem Color="Color.Info" Icon="@Icons.Material.Filled.Public">
            <ChildContent>
                <MudText Typo="Typo.h6">Recognition milestones</MudText>
                <MudText Typo="Typo.body2">Public recognition documents and treaties.</MudText>
            </ChildContent>
        </MudTimelineItem>
        <MudTimelineItem Color="Color.Success" Icon="@Icons.Material.Filled.Article">
            <ChildContent>
                <MudText Typo="Typo.h6">Modern era</MudText>
                <MudText Typo="Typo.body2">Digital services: citizenship applications, portal access, and publishing.</MudText>
            </ChildContent>
        </MudTimelineItem>
    </MudTimeline>
</MudStack>




