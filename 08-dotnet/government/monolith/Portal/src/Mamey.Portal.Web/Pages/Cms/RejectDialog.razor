@using MudBlazor
@using MudBlazor.Services

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" GutterBottom="true">Reject: @ItemTitle</MudText>
        <MudText Typo="Typo.body2" Class="mud-text-secondary" GutterBottom="true">
            Provide a short reason that the editor will see.
        </MudText>

        <MudTextField @bind-Value="_reason"
                      Label="Reason"
                      Variant="Variant.Outlined"
                      Lines="3"
                      Immediate="true" />
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" Disabled="@string.IsNullOrWhiteSpace(_reason)" OnClick="Reject">
            Reject
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string ItemTitle { get; set; } = "(untitled)";

    private string _reason = string.Empty;

    private void Cancel() => MudDialog.Cancel();

    private void Reject()
    {
        MudDialog.Close(DialogResult.Ok(_reason.Trim()));
    }
}


