<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            @if (Severity == Severity.Warning)
            {
                <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" Class="mr-2" />
            }
            else if (Severity == Severity.Error)
            {
                <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" Class="mr-2" />
            }
            else
            {
                <MudIcon Icon="@Icons.Material.Filled.Help" Color="Color.Info" Class="mr-2" />
            }
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">@Message</MudText>
        @if (!string.IsNullOrEmpty(Details))
        {
            <MudText Typo="Typo.body2" Color="Color.Default" Class="mt-2">@Details</MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@CancelText</MudButton>
        <MudButton Color="@ConfirmColor" Variant="Variant.Filled" OnClick="Confirm">
            @ConfirmText
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = null!;
    
    [Parameter] public string Title { get; set; } = "Confirm Action";
    [Parameter] public string Message { get; set; } = "Are you sure you want to proceed?";
    [Parameter] public string? Details { get; set; }
    [Parameter] public string ConfirmText { get; set; } = "Confirm";
    [Parameter] public string CancelText { get; set; } = "Cancel";
    [Parameter] public Color ConfirmColor { get; set; } = Color.Primary;
    [Parameter] public Severity Severity { get; set; } = Severity.Normal;

    private void Cancel() => MudDialog.Cancel();

    private void Confirm() => MudDialog.Close(DialogResult.Ok(true));
}
