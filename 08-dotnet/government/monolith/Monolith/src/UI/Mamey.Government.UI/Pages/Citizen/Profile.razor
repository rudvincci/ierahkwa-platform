@page "/citizen/profile"
@layout CitizenLayout
@attribute [Authorize]

<PageTitle>My Profile - Citizen Portal</PageTitle>

<PageHeader Title="My Profile" Subtitle="Manage your personal information" />

<MudGrid Spacing="3">
    <MudItem xs="12" md="8">
        <MudCard Elevation="2">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Personal Information</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Edit">
                        Edit
                    </MudButton>
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12" sm="6">
                        <MudTextField Value="@_firstName" Label="First Name" Variant="Variant.Outlined" ReadOnly="true" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField Value="@_lastName" Label="Last Name" Variant="Variant.Outlined" ReadOnly="true" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField Value="@_email" Label="Email" Variant="Variant.Outlined" ReadOnly="true" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField Value="@_phone" Label="Phone" Variant="Variant.Outlined" ReadOnly="true" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField Value="@_dateOfBirth" Label="Date of Birth" Variant="Variant.Outlined" ReadOnly="true" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField Value="@_citizenId" Label="Citizen ID" Variant="Variant.Outlined" ReadOnly="true" />
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>

        <MudCard Elevation="2" Class="mt-4">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Address</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField Value="@_street" Label="Street Address" Variant="Variant.Outlined" ReadOnly="true" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField Value="@_city" Label="City" Variant="Variant.Outlined" ReadOnly="true" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField Value="@_state" Label="State/Province" Variant="Variant.Outlined" ReadOnly="true" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField Value="@_postalCode" Label="Postal Code" Variant="Variant.Outlined" ReadOnly="true" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField Value="@_country" Label="Country" Variant="Variant.Outlined" ReadOnly="true" />
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudStack AlignItems="AlignItems.Center" Spacing="3">
                    <MudAvatar Size="Size.Large" Style="width: 120px; height: 120px;">
                        <MudImage Src="/images/default-avatar.png" Alt="Profile Photo" />
                    </MudAvatar>
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary" StartIcon="@Icons.Material.Filled.CameraAlt">
                        Change Photo
                    </MudButton>
                </MudStack>
            </MudCardContent>
        </MudCard>

        <MudCard Elevation="2" Class="mt-4">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Account Security</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudStack Spacing="2">
                    <MudButton Variant="Variant.Outlined" FullWidth="true" StartIcon="@Icons.Material.Filled.Key">
                        Change Password
                    </MudButton>
                    <MudButton Variant="Variant.Outlined" FullWidth="true" StartIcon="@Icons.Material.Filled.Security">
                        Two-Factor Authentication
                    </MudButton>
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

@code {
    private string _firstName = "John";
    private string _lastName = "Smith";
    private string _email = "john.smith@email.com";
    private string _phone = "+1 (555) 123-4567";
    private string _dateOfBirth = "January 15, 1990";
    private string _citizenId = "CIT-00001";
    private string _street = "123 Main Street";
    private string _city = "Capital City";
    private string _state = "Central Province";
    private string _postalCode = "12345";
    private string _country = "Mamey Nation";
}
