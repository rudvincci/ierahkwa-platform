@page "/"
@layout MainLayout

<PageTitle>Mamey Government Portal</PageTitle>

<MudStack Spacing="4">
    <MudText Typo="Typo.h3">Welcome to Mamey Government Portal</MudText>
    <MudText Typo="Typo.body1" Class="mud-text-secondary">
        Official portal for citizenship services, government information, and public resources.
    </MudText>

    <MudGrid Spacing="3">
        <MudItem xs="12" md="4">
            <MudCard Elevation="2">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Primary">
                            <MudIcon Icon="@Icons.Material.Filled.AssignmentInd" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Become a Citizen</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">
                        Start your citizenship application journey. Submit documents and track your progress.
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/become-a-citizen" EndIcon="@Icons.Material.Filled.ArrowForward">
                        Apply Now
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="4">
            <MudCard Elevation="2">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Secondary">
                            <MudIcon Icon="@Icons.Material.Filled.Verified" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Validate Citizen</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">
                        Verify a citizen's identity using their ID number. Quick and secure validation.
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Href="/public/validate-citizen" EndIcon="@Icons.Material.Filled.Search">
                        Validate
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="4">
            <MudCard Elevation="2">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Tertiary">
                            <MudIcon Icon="@Icons.Material.Filled.LibraryBooks" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Public Library</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">
                        Access public documents, laws, regulations, and official government resources.
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Outlined" Color="Color.Tertiary" Href="/library" EndIcon="@Icons.Material.Filled.MenuBook">
                        Browse
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-4" />

    <MudText Typo="Typo.h5">Latest News</MudText>
    <MudText Typo="Typo.body2" Class="mud-text-secondary mb-2">
        Stay informed with the latest government announcements and updates.
    </MudText>

    <MudGrid Spacing="2">
        <MudItem xs="12" md="6">
            <MudCard Elevation="1">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Welcome to the New Portal</MudText>
                    <MudText Typo="Typo.body2">
                        We've launched our new modernized government portal with improved services and user experience.
                    </MudText>
                    <MudText Typo="Typo.caption" Class="mud-text-secondary mt-2">
                        Published: January 14, 2026
                    </MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Read more</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>

    <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/news">View all news</MudButton>

    <MudDivider Class="my-4" />

    <MudText Typo="Typo.h5">Quick Links</MudText>
    <MudStack Row="true" Wrap="Wrap.Wrap" Spacing="1">
        <MudChip T="string" Href="/about-us" Icon="@Icons.Material.Filled.Info" Variant="Variant.Outlined">About Us</MudChip>
        <MudChip T="string" Href="/our-history" Icon="@Icons.Material.Filled.HistoryEdu" Variant="Variant.Outlined">Our History</MudChip>
        <MudChip T="string" Href="/cabinet" Icon="@Icons.Material.Filled.Groups" Variant="Variant.Outlined">Cabinet</MudChip>
        <MudChip T="string" Href="/recognitions" Icon="@Icons.Material.Filled.EmojiEvents" Variant="Variant.Outlined">Recognitions</MudChip>
    </MudStack>
</MudStack>
