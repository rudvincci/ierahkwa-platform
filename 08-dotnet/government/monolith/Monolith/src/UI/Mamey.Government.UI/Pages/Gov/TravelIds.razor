@page "/gov/travel-ids"
@attribute [Authorize(Roles = "Admin,GovernmentAgent")]
@inject ITravelIdentitiesService TravelIdentitiesService
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<PageTitle>Travel IDs - Government Portal</PageTitle>

<MudPaper Elevation="0" Class="pa-6">
    <MudStack Spacing="4">
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
            <MudText Typo="Typo.h4" Color="Color.Primary">Travel ID Cards</MudText>
            <MudStack Row="true" Spacing="2">
                <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.FileDownload">
                    Export
                </MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Refresh"
                           OnClick="RefreshData" Disabled="@_loading">
                    Refresh
                </MudButton>
            </MudStack>
        </MudStack>

        <MudGrid>
            <MudItem xs="12" sm="6" md="3">
                <MudCard Elevation="2" Class="@GetCardClass("All")" @onclick="@(() => SetStatusFilter("All"))">
                    <MudCardContent>
                        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                            <div>
                                <MudText Typo="Typo.body2" Color="Color.Primary">Total Issued</MudText>
                                <MudText Typo="Typo.h4">@_totalCount</MudText>
                            </div>
                            <MudIcon Icon="@Icons.Material.Filled.CreditCard" Size="Size.Large" Color="Color.Primary" />
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudCard Elevation="2" Class="@GetCardClass("Active")" @onclick="@(() => SetStatusFilter("Active"))">
                    <MudCardContent>
                        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                            <div>
                                <MudText Typo="Typo.body2" Color="Color.Success">Active</MudText>
                                <MudText Typo="Typo.h4">@_activeCount</MudText>
                            </div>
                            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Large" Color="Color.Success" />
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudCard Elevation="2" Class="@GetCardClass("Expiring")" @onclick="@(() => SetStatusFilter("Expiring"))">
                    <MudCardContent>
                        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                            <div>
                                <MudText Typo="Typo.body2" Color="Color.Warning">Expiring Soon</MudText>
                                <MudText Typo="Typo.h4">@_expiringCount</MudText>
                            </div>
                            <MudIcon Icon="@Icons.Material.Filled.Warning" Size="Size.Large" Color="Color.Warning" />
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudCard Elevation="2" Class="@GetCardClass("Expired")" @onclick="@(() => SetStatusFilter("Expired"))">
                    <MudCardContent>
                        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                            <div>
                                <MudText Typo="Typo.body2" Color="Color.Error">Expired</MudText>
                                <MudText Typo="Typo.h4">@_expiredCount</MudText>
                            </div>
                            <MudIcon Icon="@Icons.Material.Filled.Cancel" Size="Size.Large" Color="Color.Error" />
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>

        <MudDivider Class="my-4" />

        <MudStack Row="true" Spacing="2">
            <MudTextField @bind-Value="_searchQuery" Label="Search" Variant="Variant.Outlined"
                          Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Search"
                          Placeholder="Search by ID number or citizen name..." Class="flex-grow-1"
                          Immediate="true" DebounceInterval="300" OnDebounceIntervalElapsed="SearchChanged" />
            <MudSelect @bind-Value="_statusFilter" Label="Status" Variant="Variant.Outlined" Style="width: 200px;">
                <MudSelectItem Value="@("All")">All Status</MudSelectItem>
                <MudSelectItem Value="@("Active")">Active</MudSelectItem>
                <MudSelectItem Value="@("Expiring")">Expiring Soon</MudSelectItem>
                <MudSelectItem Value="@("Expired")">Expired</MudSelectItem>
                <MudSelectItem Value="@("Revoked")">Revoked</MudSelectItem>
            </MudSelect>
            @if (_statusFilter != "All")
            {
                <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="ClearFilter">
                    Clear Filter
                </MudButton>
            }
        </MudStack>

        <MudTable ServerData="@ServerReload" @ref="_table" Hover="true" Striped="true" Elevation="2"
                  Loading="@_loading" LoadingProgressColor="Color.Primary">
            <HeaderContent>
                <MudTh>ID Number</MudTh>
                <MudTh>Citizen</MudTh>
                <MudTh>Issue Date</MudTh>
                <MudTh>Expiry Date</MudTh>
                <MudTh>Status</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="ID Number">
                    <MudLink Href="@($"/gov/travel-ids/{context.TravelIdentityNumber}")" Color="Color.Primary" Style="font-family: monospace;">
                        @context.TravelIdentityNumber
                    </MudLink>
                </MudTd>
                <MudTd DataLabel="Citizen">
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                        <MudAvatar Size="Size.Small" Color="Color.Primary">
                            @((context.CitizenName ?? "?")[0])
                        </MudAvatar>
                        <MudLink Href="@($"/gov/citizens/{context.CitizenId}")" Color="Color.Secondary">
                            @(context.CitizenName ?? context.CitizenId.ToString()[..8])
                        </MudLink>
                    </MudStack>
                </MudTd>
                <MudTd DataLabel="Issue Date">@context.IssuedDate.ToString("MMM dd, yyyy")</MudTd>
                <MudTd DataLabel="Expiry Date">
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                        <MudText>@context.ExpiryDate.ToString("MMM dd, yyyy")</MudText>
                        @if (context.IsExpiringSoon)
                        {
                            <MudIcon Icon="@Icons.Material.Filled.Warning" Size="Size.Small" Color="Color.Warning" />
                        }
                    </MudStack>
                </MudTd>
                <MudTd DataLabel="Status">
                    <MudChip T="string" Color="@GetStatusColor(context)" Size="Size.Small">
                        @GetStatusText(context)
                    </MudChip>
                </MudTd>
                <MudTd DataLabel="Actions">
                    <MudButtonGroup Size="Size.Small" Variant="Variant.Text">
                        <MudButton Color="Color.Primary" Href="@($"/gov/travel-ids/{context.TravelIdentityNumber}")">
                            <MudIcon Icon="@Icons.Material.Filled.Visibility" Size="Size.Small" Class="mr-1" />
                            View
                        </MudButton>
                        <MudButton Color="Color.Secondary" OnClick="@(() => PrintTravelId(context))">
                            <MudIcon Icon="@Icons.Material.Filled.Print" Size="Size.Small" Class="mr-1" />
                            Print
                        </MudButton>
                        @if (context.IsActive && !context.IsExpired)
                        {
                            <MudMenu Icon="@Icons.Material.Filled.MoreVert" Size="Size.Small" Dense="true">
                                <MudMenuItem Icon="@Icons.Material.Filled.Refresh" OnClick="@(() => RenewTravelId(context))">
                                    Renew
                                </MudMenuItem>
                                <MudMenuItem Icon="@Icons.Material.Filled.Block" IconColor="Color.Error"
                                             OnClick="@(() => OpenRevokeDialog(context))">
                                    Revoke
                                </MudMenuItem>
                            </MudMenu>
                        }
                    </MudButtonGroup>
                </MudTd>
            </RowTemplate>
            <NoRecordsContent>
                <MudText Align="Align.Center" Class="pa-8">
                    <MudIcon Icon="@Icons.Material.Filled.SearchOff" Size="Size.Large" Color="Color.Default" Class="mb-2" />
                    <br />
                    No travel IDs found matching your criteria.
                </MudText>
            </NoRecordsContent>
            <PagerContent>
                <MudTablePager PageSizeOptions="new int[] { 10, 25, 50, 100 }" />
            </PagerContent>
        </MudTable>
    </MudStack>
</MudPaper>

@* Revoke Dialog *@
<MudDialog @bind-Visible="_revokeDialogVisible">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Error" Class="mr-2" />
            Revoke Travel ID
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Class="mb-4">
            Are you sure you want to revoke Travel ID <strong>@_travelIdToRevoke?.TravelIdentityNumber</strong>?
            This action cannot be undone.
        </MudText>
        <MudTextField @bind-Value="_revokeReason" Label="Reason for Revocation" Variant="Variant.Outlined"
                      Lines="3" Required="true" RequiredError="Please provide a reason" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => _revokeDialogVisible = false)">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="RevokeTravelId" Disabled="@_processing">
            @if (_processing)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            Revoke
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    private MudTable<TravelIdentitySummaryModel>? _table;
    private string _searchQuery = "";
    private string _statusFilter = "All";
    private bool _loading = false;
    private bool _processing = false;
    private bool _revokeDialogVisible = false;
    private string _revokeReason = "";
    private TravelIdentitySummaryModel? _travelIdToRevoke;
    
    private long _totalCount = 0;
    private int _activeCount = 0;
    private int _expiringCount = 0;
    private int _expiredCount = 0;
    
    // TODO: Get from user context or tenant service
    private Guid _tenantId = Guid.Parse("00000000-0000-0000-0000-000000000001");

    protected override async Task OnInitializedAsync()
    {
        await LoadStatusCountsAsync();
    }

    private async Task LoadStatusCountsAsync()
    {
        try
        {
            var all = await TravelIdentitiesService.BrowseAsync(_tenantId, null, null, 1, 1);
            _totalCount = all.TotalResults;
            
            var active = await TravelIdentitiesService.BrowseAsync(_tenantId, "Active", null, 1, 1);
            _activeCount = (int)active.TotalResults;
            
            _expiringCount = 0;
            _expiredCount = 0;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading status counts: {ex.Message}");
        }
    }

    private async Task<TableData<TravelIdentitySummaryModel>> ServerReload(TableState state, CancellationToken cancellationToken)
    {
        _loading = true;
        StateHasChanged();
        
        try
        {
            var status = _statusFilter == "All" ? null : _statusFilter;
            var result = await TravelIdentitiesService.BrowseAsync(
                _tenantId,
                status,
                string.IsNullOrWhiteSpace(_searchQuery) ? null : _searchQuery,
                state.Page + 1,
                state.PageSize,
                cancellationToken);

            return new TableData<TravelIdentitySummaryModel>
            {
                Items = result.Items,
                TotalItems = (int)result.TotalResults
            };
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading travel IDs: {ex.Message}", Severity.Error);
            return new TableData<TravelIdentitySummaryModel>
            {
                Items = Array.Empty<TravelIdentitySummaryModel>(),
                TotalItems = 0
            };
        }
        finally
        {
            _loading = false;
            StateHasChanged();
        }
    }

    private async Task SetStatusFilter(string status)
    {
        _statusFilter = status;
        if (_table != null)
        {
            await _table.ReloadServerData();
        }
    }

    private async Task ClearFilter()
    {
        _statusFilter = "All";
        if (_table != null)
        {
            await _table.ReloadServerData();
        }
    }

    private async Task SearchChanged(string value)
    {
        _searchQuery = value;
        if (_table != null)
        {
            await _table.ReloadServerData();
        }
    }

    private async Task RefreshData()
    {
        await LoadStatusCountsAsync();
        if (_table != null)
        {
            await _table.ReloadServerData();
        }
        Snackbar.Add("Data refreshed", Severity.Success);
    }

    private void PrintTravelId(TravelIdentitySummaryModel travelId)
    {
        Snackbar.Add($"Printing Travel ID {travelId.TravelIdentityNumber}...", Severity.Info);
    }

    private async Task RenewTravelId(TravelIdentitySummaryModel travelId)
    {
        _processing = true;
        try
        {
            var success = await TravelIdentitiesService.RenewAsync(_tenantId, travelId.Id);
            if (success)
            {
                Snackbar.Add($"Travel ID {travelId.TravelIdentityNumber} renewal initiated", Severity.Success);
                await RefreshData();
            }
            else
            {
                Snackbar.Add("Failed to renew travel ID", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processing = false;
        }
    }

    private void OpenRevokeDialog(TravelIdentitySummaryModel travelId)
    {
        _travelIdToRevoke = travelId;
        _revokeReason = "";
        _revokeDialogVisible = true;
    }

    private async Task RevokeTravelId()
    {
        if (string.IsNullOrWhiteSpace(_revokeReason))
        {
            Snackbar.Add("Please provide a reason for revocation", Severity.Warning);
            return;
        }

        if (_travelIdToRevoke == null) return;

        _processing = true;
        try
        {
            var success = await TravelIdentitiesService.RevokeAsync(_tenantId, _travelIdToRevoke.Id, _revokeReason);
            if (success)
            {
                Snackbar.Add($"Travel ID {_travelIdToRevoke.TravelIdentityNumber} revoked", Severity.Info);
                _revokeDialogVisible = false;
                await RefreshData();
            }
            else
            {
                Snackbar.Add("Failed to revoke travel ID", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processing = false;
            _travelIdToRevoke = null;
            _revokeReason = "";
        }
    }

    private string GetStatusText(TravelIdentitySummaryModel travelId)
    {
        if (!travelId.IsActive) return "Revoked";
        if (travelId.IsExpired) return "Expired";
        if (travelId.IsExpiringSoon) return "Expiring";
        return "Active";
    }

    private Color GetStatusColor(TravelIdentitySummaryModel travelId)
    {
        if (!travelId.IsActive) return Color.Dark;
        if (travelId.IsExpired) return Color.Error;
        if (travelId.IsExpiringSoon) return Color.Warning;
        return Color.Success;
    }

    private string GetCardClass(string status) => 
        _statusFilter == status ? "cursor-pointer border-2 border-primary" : "cursor-pointer";
}
