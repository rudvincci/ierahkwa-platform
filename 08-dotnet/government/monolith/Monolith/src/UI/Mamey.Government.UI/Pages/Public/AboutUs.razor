@page "/about-us"

<PageTitle>About Us - Mamey Government Portal</PageTitle>

<MudPaper Elevation="0" Class="pa-6">
    <MudStack Spacing="4">
        <MudText Typo="Typo.h4" Color="Color.Primary">About Us</MudText>
        
        <MudText Typo="Typo.body1">
            The Mamey Government Portal serves as the official digital gateway to our nation's government services, 
            providing citizens and residents with seamless access to essential public resources and administrative functions.
        </MudText>

        <MudDivider Class="my-4" />

        <MudText Typo="Typo.h5" Color="Color.Primary">Our Mission</MudText>
        <MudText Typo="Typo.body1">
            To provide transparent, efficient, and accessible government services to all citizens through modern digital solutions,
            fostering trust and engagement between the government and its people.
        </MudText>

        <MudText Typo="Typo.h5" Color="Color.Primary" Class="mt-4">Our Vision</MudText>
        <MudText Typo="Typo.body1">
            To be a model digital government that leads in citizen-centric service delivery, innovation, and administrative excellence,
            while preserving our cultural heritage and sovereignty.
        </MudText>

        <MudDivider Class="my-4" />

        <MudText Typo="Typo.h5" Color="Color.Primary">Services Offered</MudText>
        <MudGrid>
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2">
                    <MudCardContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                            <MudIcon Icon="@Icons.Material.Filled.AssignmentInd" Color="Color.Primary" />
                            <MudText Typo="Typo.h6">Citizenship</MudText>
                        </MudStack>
                        <MudText Typo="Typo.body2" Class="mt-2">Apply for citizenship and manage your citizen profile</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2">
                    <MudCardContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                            <MudIcon Icon="@Icons.Material.Filled.Book" Color="Color.Primary" />
                            <MudText Typo="Typo.h6">Passports</MudText>
                        </MudStack>
                        <MudText Typo="Typo.body2" Class="mt-2">Request and renew travel documents</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2">
                    <MudCardContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                            <MudIcon Icon="@Icons.Material.Filled.CardMembership" Color="Color.Primary" />
                            <MudText Typo="Typo.h6">Certificates</MudText>
                        </MudStack>
                        <MudText Typo="Typo.body2" Class="mt-2">Obtain official government certificates</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>

        <MudDivider Class="my-4" />

        <MudText Typo="Typo.h5" Color="Color.Primary">Contact Us</MudText>
        <MudStack Spacing="2">
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                <MudIcon Icon="@Icons.Material.Filled.Email" Size="Size.Small" />
                <MudText Typo="Typo.body2">contact@mamey.gov</MudText>
            </MudStack>
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                <MudIcon Icon="@Icons.Material.Filled.Phone" Size="Size.Small" />
                <MudText Typo="Typo.body2">+1 (555) 123-4567</MudText>
            </MudStack>
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" />
                <MudText Typo="Typo.body2">Government House, Capital City</MudText>
            </MudStack>
        </MudStack>
    </MudStack>
</MudPaper>
