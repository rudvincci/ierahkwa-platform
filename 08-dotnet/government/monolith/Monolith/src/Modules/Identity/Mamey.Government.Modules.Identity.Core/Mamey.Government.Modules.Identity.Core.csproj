<Project Sdk="Microsoft.NET.Sdk">
  
  <!-- General properties -->
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <UseLocalMicroMonolith Condition="Exists('..\\..\\..\\..\\..\\..\\Mamey\\src\\Mamey.MicroMonolith.Abstractions\\src\\Mamey.MicroMonolith.Abstractions\\Mamey.MicroMonolith.Abstractions.csproj') And Exists('..\\..\\..\\..\\..\\..\\Mamey\\src\\Mamey.MicroMonolith.Infrastructure\\src\\Mamey.MicroMonolith.Infrastructure\\Mamey.MicroMonolith.Infrastructure.csproj')">true</UseLocalMicroMonolith>
  </PropertyGroup>

  <!-- Define constants based on the database choice -->
  <PropertyGroup>
    <DefineConstants>USE_SQL</DefineConstants>
  </PropertyGroup>

  <!-- MongoDB Folder Inclusion -->
  <ItemGroup Condition="'$(DefineConstants.Contains(`USE_MONGO`))'">
    <Folder Include="Mongo\" />
    <Folder Include="Mongo\Documents\" />
    <Folder Include="Mongo\Repositories\" />
  </ItemGroup>

  <!-- EF Folder Inclusion -->

  <!-- Project references for different configurations -->
  <ItemGroup Condition="'$(UseLocalMicroMonolith)' == 'true'">
    <ProjectReference Include="..\..\..\..\..\..\Mamey\src\Mamey.MicroMonolith.Abstractions\src\Mamey.MicroMonolith.Abstractions\Mamey.MicroMonolith.Abstractions.csproj" />
    <ProjectReference Include="..\..\..\..\..\..\Mamey\src\Mamey.MicroMonolith.Infrastructure\src\Mamey.MicroMonolith.Infrastructure\Mamey.MicroMonolith.Infrastructure.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(UseLocalMicroMonolith)' != 'true'">
    <PackageReference Include="Mamey.MicroMonolith.Infrastructure" Version="2.0.*" />
    <PackageReference Include="Mamey.MicroMonolith.Abstractions" Version="2.0.*" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="9.0.11" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Shared\Mamey.Government.Shared.Abstractions\Mamey.Government.Shared.Abstractions.csproj" />
  </ItemGroup>
  
</Project>
