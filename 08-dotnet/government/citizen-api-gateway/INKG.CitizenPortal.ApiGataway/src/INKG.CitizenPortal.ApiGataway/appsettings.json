{
    "app": {
        "name": "INK Governement API Gateway [Ocelot]!",
        "service": "ink-api",
        "version": "1"
    },
    "logger": {
        "level": "information",
        "excludePaths": [ "/", "/ping", "/metrics" ],
        "excludeProperties": [
            "api_key",
            "access_key",
            "ApiKey",
            "ApiSecret",
            "ClientId",
            "ClientSecret",
            "ConnectionString",
            "Password",
            "Email",
            "Login",
            "Secret",
            "Token"
        ],
        "console": {
            "enabled": true
        },
        "elk": {
            "enabled": false,
            "url": "http://localhost:9200"
        },
        "file": {
            "enabled": false,
            "path": "logs/logs.txt",
            "interval": "day"
        },
        "seq": {
            "enabled": true,
            "url": "http://localhost:5341",
            "apiKey": "secret"
        },
        "tags": {}
    },
    "jaeger": {
        "enabled": true,
        "serviceName": "api",
        "udpHost": "localhost",
        "udpPort": 6831,
        "maxPacketSize": 0,
        "sampler": "const"
    },
     "jwt": {
         "certificate": {
             "location": "certs/localhost.crt"
         },
         //"issuerSigningKey": "eiquief5phee9pazo0Faegaez9gohThailiur5woy2befiech1oarai4aiLi6ahVecah3ie9Aiz6Peij",
         "validIssuer": "mamey",
         "validateAudience": false,
         "validateIssuer": true,
         "validateLifetime": true,
         "cookie": {
             "httpOnly": true,
             "sameSite": "unspecified",
             "secure": false
         }
     },
    "metrics": {
        "enabled": true,
        "influxEnabled": false,
        "prometheusEnabled": true,
        "influxUrl": "http://localhost:8086",
        "database": "inkg",
        "env": "local",
        "interval": 5
    },
    "rabbitMq": {
        "connectionName": "ink-api",
        "retries": 3,
        "retryInterval": 2,
        "conventionsCasing": "snakeCase",
        "logger": {
            "enabled": true
        },
        "username": "guest",
        "password": "guest",
        "virtualHost": "/",
        "port": 5672,
        "hostnames": [
            "localhost"
        ],
        "requestedConnectionTimeout": "00:00:30",
        "requestedHeartbeat": "00:01:00",
        "socketReadTimeout": "00:00:30",
        "socketWriteTimeout": "00:00:30",
        "continuationTimeout": "00:00:20",
        "handshakeContinuationTimeout": "00:00:10",
        "networkRecoveryInterval": "00:00:05",
        "context": {
            "enabled": true,
            "header": "message_context"
        },
        "spanContextHeader": "span_context"
    },
    "security": {
        "encryptionKey": "super-duper-secret-key**",
        "recovery": {
            "issuer": "mamey",
            "expiry": "00:02:00",
            "allowedEndpoints": [ "/reset-password" ]
        },
        "certificate": {
            "enabled": false,
            "header": "Certificate",
            "skipRevocationCheck": false,
            "allowedDomains": [ "mamey.io" ],
            "allowSubdomains": true,
            "allowedHosts": [
                "localhost"
            ],
            "acl": {
                "wallets-service": {
                    "validIssuer": "mamey.io",
                    "permissions": [
                        "users:read"
                    ]
                },
                "identity-service": {
                    "validIssuer": "mamey.io",
                    "permissions": [
                        "users:read"
                    ]
                }
            }
        },
        "encryption": {
            "enabled": true,
            "key": "super-duper-secret-key**12345678"
        }
    },
    "vault": {
        "enabled": false,
        "url": "http://localhost:8200",
        "authType": "token",
        "token": "secret",
        "username": "user",
        "password": "secret",
        "kv": {
            "enabled": true,
            "engineVersion": 2,
            "mountPoint": "kv",
            "path": "ink/ink-api/appsettings"
        },
        "pki": {
            "enabled": true,
            "roleName": "ink-api",
            "commonName": "ink-api.mamey.io"
        }
    }
}