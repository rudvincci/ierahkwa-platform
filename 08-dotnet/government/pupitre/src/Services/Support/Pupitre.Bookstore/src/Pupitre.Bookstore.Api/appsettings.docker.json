{
    "app": {
        "name": "Mamey - Bookstore Service Api [Docker]"
    },
    "consul": {
        "enabled": true,
        "url": "http://consul:8500",
        "service": "bookstore-service",
        "address": "bookstore-service",
        "port": "80",
        "pingEnabled": true,
        "pingEndpoint": "ping",
        "pingInterval": 3,
        "removeAfterInterval": 3
    },
    "fabio": {
        "enabled": true,
        "url": "http://fabio:9999",
        "service": "bookstore-service"
    },
    "httpClient": {
        "type": "fabio",
        "retries": 3,
        "services": {
            "samples": "http://samples-service"
        },
        "requestMasking": {
            "enabled": true,
            "maskTemplate": "*****"
        }
    },
    "logger": {
        "console": {
            "enabled": true
        },
        "elk": {
            "enabled": false,
            "url": "http://elk:9200"
        },
        "file": {
            "enabled": false,
            "path": "logs/logs.txt",
            "interval": "day"
        },
        "seq": {
            "enabled": true,
            "url": "http://seq:5341",
            "apiKey": "secret"
        }
    },
    "jaeger": {
        "enabled": true,
        "serviceName": "bookstore",
        "udpHost": "jaeger",
        "udpPort": 6831,
        "maxPacketSize": 0,
        "sampler": "const",
        "excludePaths": [ "/", "/ping", "/metrics" ]
    },
    "metrics": {
        "enabled": true,
        "influxEnabled": false,
        "prometheusEnabled": true,
        "influxUrl": "http://influx:8086",
        "database": "bookstore",
        "env": "docker",
        "interval": 5
    },
    "mongo": {
        "connectionString": "mongodb://root:secret@mongo:27017",
        "database": "bookstore-service",
        "seed": false
    },
    "rabbitMq": {
        "hostnames": [
            "rabbitmq"
        ]
    },
    "redis": {
        "connectionString": "redis",
        "instance": "bookstore:"
    },
    "swagger": {
        "enabled": true,
        "reDocEnabled": false,
        "name": "Mamey Bookstore API v1",
        "title": "Mamey Bookstore API",
        "version": "v1",
        "routePrefix": "docs",
        "includeSecurity": true
    },
    "vault": {
        "enabled": true,
        "url": "http://vault:8200",
        "kv": {
            "enabled": true
        },
        "pki": {
            "enabled": true
        },
        "lease": {
            "mongo": {
                "enabled": true,
                "templates": {
                    "connectionString": "mongodb://{{username}}:{{password}}@mongo:27017"
                }
            }
        }
    }
}
