{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.w3.org/ns/did/v1",
  "title": "DID Document",
  "type": "object",
  "properties": {
    "@context": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ]
    },
    "id": { "type": "string", "pattern": "^did:.+" },
    "controller": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ]
    }
    // ... (full spec at W3C repo)
  }
}
