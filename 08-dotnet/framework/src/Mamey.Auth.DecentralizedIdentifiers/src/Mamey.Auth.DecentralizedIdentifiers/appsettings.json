{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Mamey.Auth.DecentralizedIdentifiers": "Debug"
    }
  },
  "AllowedHosts": "*",
  "didAuth": {
    "enabledMethods": [
      "did:key",
      "did:web", 
      "did:ethr",
      "did:ion",
      "did:peer"
    ],
    "proofRequirements": {
      "requireProof": true,
      "allowedProofTypes": [
        "Ed25519Signature2020",
        "JsonWebSignature2020",
        "EcdsaSecp256k1Signature2019"
      ]
    },
    "cacheOptions": {
      "enabled": true,
      "ttlMinutes": 60,
      "storageType": "Memory",
      "redisConnectionString": "localhost:6379"
    },
    "resolverEndpoints": {
      "didWeb": "https://did-web.example.com",
      "didEthr": "https://mainnet.infura.io/v3/YOUR_PROJECT_ID",
      "didIon": "https://beta.ion.msidentity.com"
    },
    "trustRegistry": {
      "enabled": true,
      "endpoint": "https://trust-registry.example.com"
    },
    "revocationChecks": {
      "enabled": true,
      "timeoutSeconds": 30
    },
    "cookieOptions": {
      "name": "did-auth",
      "httpOnly": true,
      "secure": true,
      "sameSite": "Strict",
      "expirationMinutes": 60
    }
  },
  "redis": {
    "connectionString": "localhost:6379",
    "instance": "did-cache",
    "database": 0
  }
}

