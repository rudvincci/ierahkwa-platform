<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Description>Mamey.Authentik - .NET client library for Authentik Identity Provider</Description>
    <Authors>Mamey.io</Authors>
    <LangVersion>Latest</LangVersion>
    <AssemblyName>Mamey.Authentik</AssemblyName>
    <Title>Mamey.Authentik</Title>
    <PackageId>Mamey.Authentik</PackageId>
    <PackageTags>Mamey;Authentik;Identity;OAuth2;SAML;LDAP</PackageTags>
    <Version>1.0.0</Version>
    <PackageLicenseExpression>AGPL-3.0</PackageLicenseExpression>
    <Copyright>Copyright (c) 2025 Mamey.io</Copyright>
    <Company>Mamey.io</Company>
    <PackageProjectUrl>https://github.com/Mamey-io/Mamey</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Mamey-io/Mamey</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Initial release of Mamey.Authentik library</PackageReleaseNotes>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
  
  <ItemGroup>
    <!-- Use local project references to avoid package version downgrades in monorepo builds -->
    <ProjectReference Include="..\..\..\Mamey\src\Mamey\Mamey.csproj" />
    <ProjectReference Include="..\..\..\Mamey.Http\src\Mamey.Http\Mamey.Http.csproj" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.11" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="9.0.11" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.11" />
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="9.0.11" />
    <PackageReference Include="Microsoft.Extensions.Caching.StackExchangeRedis" Version="9.0.11" />
    <PackageReference Include="Polly" Version="8.6.1" />
    <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="9.0.0" />
    <PackageReference Include="System.Text.Json" Version="9.0.11" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\Mamey.Authentik.Generated\Mamey.Authentik.Generated.csproj" />
  </ItemGroup>
</Project>
