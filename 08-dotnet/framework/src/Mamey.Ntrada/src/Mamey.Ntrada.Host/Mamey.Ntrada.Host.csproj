<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <OutputType>Exe</OutputType>
        <LangVersion>latest</LangVersion>
    <Version>2.0.5</Version>
    <PackageLicenseExpression>Proprietary</PackageLicenseExpression>
    <Copyright>Copyright (c) 2025 Mamey.io</Copyright>
    <Company>Mamey.io</Company>
    <PackageProjectUrl>https://github.com/Mamey-io/Mamey</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Mamey-io/Mamey</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Mamey Framework 2.0 release</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Mamey.Ntrada\Mamey.Ntrada.csproj" />
      <ProjectReference Include="..\..\extensions\Mamey.Ntrada.Extensions.Cors\Mamey.Ntrada.Extensions.Cors.csproj" />
      <ProjectReference Include="..\..\extensions\Mamey.Ntrada.Extensions.CustomErrors\Mamey.Ntrada.Extensions.CustomErrors.csproj" />
      <ProjectReference Include="..\..\extensions\Mamey.Ntrada.Extensions.Jwt\Mamey.Ntrada.Extensions.Jwt.csproj" />
      <ProjectReference Include="..\..\extensions\Mamey.Ntrada.Extensions.RabbitMq\Mamey.Ntrada.Extensions.RabbitMq.csproj" />
      <ProjectReference Include="..\..\extensions\Mamey.Ntrada.Extensions.Tracing\Mamey.Ntrada.Extensions.Tracing.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Update="ntrada.yml">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="NetEscapades.Configuration.Yaml" Version="3.1.0" />
    </ItemGroup>

</Project>
