<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>mamey</ToolCommandName>
    <Description>MameyNode CLI tool - Hardhat-style developer tool for MameyNode</Description>
    <Authors>Mamey.io</Authors>
    <LangVersion>Latest</LangVersion>
    <AssemblyName>mamey</AssemblyName>
    <Title>Mamey CLI</Title>
    <PackageId>Mamey.Tools.Cli</PackageId>
    <PackageTags>Mamey;CLI;Developer;Tool</PackageTags>
    <Version>1.0.0</Version>
    <PackageLicenseExpression>AGPL-3.0</PackageLicenseExpression>
    <Copyright>Copyright (c) 2025 Mamey.io</Copyright>
    <Company>Mamey.io</Company>
    <PackageProjectUrl>https://github.com/Mamey-io/Mamey</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Mamey-io/Mamey</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.11" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.11" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="9.0.11" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.11" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="9.0.11" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.11" />
    <PackageReference Include="System.Text.Json" Version="9.0.11" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Mamey.Blockchain.Banking\src\Mamey.Blockchain.Banking\Mamey.Blockchain.Banking.csproj" />
    <ProjectReference Include="..\..\..\Mamey.Blockchain.Government\src\Mamey.Blockchain.Government\Mamey.Blockchain.Government.csproj" />
    <ProjectReference Include="..\..\..\Mamey.Blockchain.Node\src\Mamey.Blockchain.Node\Mamey.Blockchain.Node.csproj" />
  </ItemGroup>

</Project>
