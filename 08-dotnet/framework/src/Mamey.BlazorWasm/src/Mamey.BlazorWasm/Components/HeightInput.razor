<MudPaper class="pa-4 ma-2">
    <MudText Typo="Typo.h6">Height</MudText>
    
    <MudGrid>
        <MudItem xs="12">
            <MudRadioGroup T="string" @bind-Value="@_selectedUnit" SelectedOptionChanged="OnUnitChanged">
                <MudRadio T="string" Value="@("ft-in")">Feet and Inches (ft-in)</MudRadio>
                <MudRadio T="string" Value="@("cm")">Centimeters (cm)</MudRadio>
            </MudRadioGroup>
        </MudItem>
        @if (_selectedUnit == "cm")
        {
            <MudItem xs="12">
                <MudTextField T="double" Label="Height (cm)" @bind-Value="_heightValueCm"  />
            </MudItem>
        }
        else if (_selectedUnit == "ft-in")
        {
            <MudItem xs="6">
                <MudTextField Label="Feet" @bind-Value="_feet"  />
            </MudItem>
            <MudItem xs="6">
                <MudTextField Label="Inches" @bind-Value="_inches"  />
            </MudItem>
        }
        @_selectedUnit
        
    </MudGrid>  
</MudPaper>
