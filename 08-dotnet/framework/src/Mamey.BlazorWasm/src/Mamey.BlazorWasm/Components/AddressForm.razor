<MudPaper MinWidth="500px" Elevation="0" Class="d-flex flex-column gap-4">
    <MudCard Elevation="@Elevation">
        <MudCardHeader>
            <MudText Typo="Typo.h6">@Title</MudText>
        </MudCardHeader>
        <MudCardContent>
            <MudStack>
                <MudTextField T="string" Label="Firm Name" @bind-Value="firmName"></MudTextField>
                <MudTextField T="string" Label="Line1" @bind-Value="line1" Required="true"></MudTextField>
                <MudTextField T="string" Label="Line2" @bind-Value="line2"></MudTextField>
                <MudTextField T="string" Label="Line3" @bind-Value="line3"></MudTextField>
                <MudTextField T="string" Label="Urbanization" @bind-Value="urbanization"></MudTextField>
                <MudTextField T="string" Label="City" @bind-Value="city" Required="true"></MudTextField>
                <MudTextField T="string" Label="State" @bind-Value="state" Required="true"></MudTextField>
                <MudTextField T="string" Label="Zip" @bind-Value="zip5" Required="true"></MudTextField>
                <MudTextField T="string" Label="Country" @bind-Value="country" Required="true"></MudTextField>
            </MudStack>
        </MudCardContent>
    </MudCard>
</MudPaper>

