@using Mamey.Types
@using Mamey.BlazorWasm.Components.Foundation
@using System.ComponentModel.DataAnnotations
@using Mamey

<MudSelect T="FrequencyType?"
           Label="@Label"
           Placeholder="@Placeholder"
           Value="@Value"
           ValueChanged="@ValueChanged"
           Required="@Required"
           Disabled="@Disabled"
           Variant="@Variant"
           Dense="@Dense"
           Class="@Class"
           Style="@Style">
    @if (AllowEmpty && !Required)
    {
        <MudSelectItem T="FrequencyType?" Value="@((FrequencyType?)null)">-- Select --</MudSelectItem>
    }
    @foreach (var type in Enum.GetValues<FrequencyType>())
    {
        var displayName = type.GetEnumDisplayName() ?? type.ToString();
        <MudSelectItem T="FrequencyType?" Value="@type">@displayName</MudSelectItem>
    }
</MudSelect>
<FieldMessages HelperText="@HelperText" />

@code {
    [Parameter] public string Label { get; set; } = "Frequency";
    [Parameter] public string HelperText { get; set; } = "Select the frequency";
    [Parameter] public string Placeholder { get; set; } = "Select frequency";
    [Parameter] public bool Required { get; set; } = false;
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Variant Variant { get; set; } = Variant.Text;
    [Parameter] public bool Dense { get; set; } = true;
    [Parameter] public bool AllowEmpty { get; set; } = true;
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public string Style { get; set; } = "";

    [Parameter] public FrequencyType? Value { get; set; }
    [Parameter] public EventCallback<FrequencyType?> ValueChanged { get; set; }
}




