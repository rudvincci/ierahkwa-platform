@using Mamey.Types
@using Mamey.BlazorWasm.Components.Foundation
@using System.ComponentModel.DataAnnotations
@using Mamey

<MudSelect T="EmploymentStatus?"
           Label="@Label"
           Placeholder="@Placeholder"
           Value="@Value"
           ValueChanged="@ValueChanged"
           Required="@Required"
           Disabled="@Disabled"
           Variant="@Variant"
           Dense="@Dense"
           Class="@Class"
           Style="@Style">
    @if (AllowEmpty && !Required)
    {
        <MudSelectItem T="EmploymentStatus?" Value="@((EmploymentStatus?)null)">-- Select --</MudSelectItem>
    }
    @foreach (var status in Enum.GetValues<EmploymentStatus>())
    {
        var displayName = status.GetEnumDisplayName() ?? status.ToString();
        <MudSelectItem T="EmploymentStatus?" Value="@status">@displayName</MudSelectItem>
    }
</MudSelect>
<FieldMessages HelperText="@HelperText" />

@code {
    [Parameter] public string Label { get; set; } = "Employment Status";
    [Parameter] public string HelperText { get; set; } = "Select your employment status";
    [Parameter] public string Placeholder { get; set; } = "Select employment status";
    [Parameter] public bool Required { get; set; } = false;
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Variant Variant { get; set; } = Variant.Text;
    [Parameter] public bool Dense { get; set; } = true;
    [Parameter] public bool AllowEmpty { get; set; } = true;
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public string Style { get; set; } = "";

    [Parameter] public EmploymentStatus? Value { get; set; }
    [Parameter] public EventCallback<EmploymentStatus?> ValueChanged { get; set; }
}




