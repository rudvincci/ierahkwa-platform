@using Mamey.Types
@using Mamey.BlazorWasm.Components.Foundation
@using System.ComponentModel.DataAnnotations
@using System.Reflection
@using Mamey

<MudSelect T="Gender?"
           Label="@Label"
           Placeholder="@Placeholder"
           Value="@Value"
           ValueChanged="@ValueChanged"
           Required="@Required"
           Disabled="@Disabled"
           Variant="@Variant"
           Dense="@Dense"
           Class="@Class"
           Style="@Style">
    @if (AllowEmpty && !Required)
    {
        <MudSelectItem T="Gender?" Value="@((Gender?)null)">-- Select --</MudSelectItem>
    }
    @foreach (var gender in Enum.GetValues<Gender>())
    {
        var displayName = gender.GetEnumDisplayName() ?? gender.ToString();
        <MudSelectItem T="Gender?" Value="@gender">@displayName</MudSelectItem>
    }
</MudSelect>
<FieldMessages HelperText="@HelperText" />

@code {
    [Parameter] public string Label { get; set; } = "Gender";
    [Parameter] public string HelperText { get; set; } = "Select your gender";
    [Parameter] public string Placeholder { get; set; } = "Select gender";
    [Parameter] public bool Required { get; set; } = false;
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Variant Variant { get; set; } = Variant.Text;
    [Parameter] public bool Dense { get; set; } = true;
    [Parameter] public bool AllowEmpty { get; set; } = true;
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public string Style { get; set; } = "";

    [Parameter] public Gender? Value { get; set; }
    [Parameter] public EventCallback<Gender?> ValueChanged { get; set; }
}





