@using Mamey.Types
@using Mamey.BlazorWasm.Components.Foundation
@using System.ComponentModel.DataAnnotations
@using Mamey

<MudSelect T="EducationLevel?"
           Label="@Label"
           Placeholder="@Placeholder"
           Value="@Value"
           ValueChanged="@ValueChanged"
           Required="@Required"
           Disabled="@Disabled"
           Variant="@Variant"
           Dense="@Dense"
           Class="@Class"
           Style="@Style">
    @if (AllowEmpty && !Required)
    {
        <MudSelectItem T="EducationLevel?" Value="@((EducationLevel?)null)">-- Select --</MudSelectItem>
    }
    @foreach (var level in Enum.GetValues<EducationLevel>())
    {
        var displayName = level.GetEnumDisplayName() ?? level.ToString();
        <MudSelectItem T="EducationLevel?" Value="@level">@displayName</MudSelectItem>
    }
</MudSelect>
<FieldMessages HelperText="@HelperText" />

@code {
    [Parameter] public string Label { get; set; } = "Education Level";
    [Parameter] public string HelperText { get; set; } = "Select your education level";
    [Parameter] public string Placeholder { get; set; } = "Select education level";
    [Parameter] public bool Required { get; set; } = false;
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Variant Variant { get; set; } = Variant.Text;
    [Parameter] public bool Dense { get; set; } = true;
    [Parameter] public bool AllowEmpty { get; set; } = true;
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public string Style { get; set; } = "";

    [Parameter] public EducationLevel? Value { get; set; }
    [Parameter] public EventCallback<EducationLevel?> ValueChanged { get; set; }
}




