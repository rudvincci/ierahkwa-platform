    <PackageReference Include="Microsoft.Authentication.WebAssembly.Msal" Version="9.0.11" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.11" />
    <PackageReference Include="Microsoft.Graph.Core" Version="3.2.4" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\Mamey.Http\src\Mamey.Http\Mamey.Http.csproj" />
    <ProjectReference Include="..\..\..\Mamey.Azure.Abstractions\src\Mamey.Azure.Abstractions\Mamey.Azure.Abstractions.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Requests\" />
    <None Remove="Msal\" />
    <None Remove="Services\" />
    <None Remove="Providers\" />
    <None Remove="Helpers\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Requests\" />
    <Folder Include="Msal\" />
    <Folder Include="Services\" />
    <Folder Include="Providers\" />
    <Folder Include="Helpers\" />
  </ItemGroup>
</Project>
