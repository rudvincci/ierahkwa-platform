<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <!-- Mamey.BlazorWasm RCL for base components and routing -->
    <PackageReference Include="Mamey.BlazorWasm" Version="2.0.*" />
    
    <!-- MudBlazor for UI components -->
    <PackageReference Include="MudBlazor" Version="8.*" />
    
    <!-- Refit for type-safe API clients -->
    <PackageReference Include="Refit" Version="8.*" />
  </ItemGroup>

  <ItemGroup>
    <!-- CRITICAL: Only reference Contracts project -->
    <ProjectReference Include="..\Mamey.Domain.Service.Contracts\Mamey.Domain.Service.Contracts.csproj" />
  </ItemGroup>

</Project>











