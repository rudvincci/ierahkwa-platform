{
  "$schema": "http://json.schemastore.org/template",
  "author": "Mamey Technologies",
  "classifications": [
    "Mamey",
    "Blazor",
    "WebAssembly",
    "Razor Class Library",
    "Micro-Frontend"
  ],
  "identity": "Mamey.Template.BlazorWasm",
  "name": "Mamey BlazorWasm Micro-Frontend",
  "shortName": "mamey-blazorwasm",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Mamey.Domain.Service",
  "preferNameDirectory": true,
  "symbols": {
    "Domain": {
      "type": "parameter",
      "description": "The domain name (e.g., BIIS, SICB, Government, FBDETB)",
      "replaces": "Domain",
      "defaultValue": "Domain"
    },
    "Service": {
      "type": "parameter",
      "description": "The service name (e.g., TreatyLiquidityPools, Citizens)",
      "replaces": "Service",
      "defaultValue": "Service"
    },
    "Entity": {
      "type": "parameter",
      "description": "The primary entity name (e.g., TreatyLiquidityPool, Citizen)",
      "replaces": "Entity",
      "defaultValue": "Entity"
    },
    "Entities": {
      "type": "parameter",
      "description": "The plural entity name (e.g., TreatyLiquidityPools, Citizens)",
      "replaces": "Entities",
      "defaultValue": "Entities"
    },
    "service": {
      "type": "parameter",
      "description": "The service route (lowercase, kebab-case)",
      "replaces": "service",
      "defaultValue": "service"
    },
    "Icon": {
      "type": "parameter",
      "description": "Material icon name (e.g., AccountBalance, People)",
      "replaces": "Icon",
      "defaultValue": "Dashboard"
    },
    "RequiredRoles": {
      "type": "parameter",
      "description": "Comma-separated list of required roles (e.g., Admin,Treasury)",
      "replaces": "RequiredRoles",
      "defaultValue": "User"
    },
    "ApiBaseUrl": {
      "type": "parameter",
      "description": "Base URL for API client (from configuration)",
      "replaces": "ApiBaseUrl",
      "defaultValue": "https://api.example.com"
    }
  }
}











