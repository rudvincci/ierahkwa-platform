@page "/"

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h3" Class="mb-4">Welcome to Domain Portal</MudText>
    
    <MudGrid>
        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Services</MudText>
                    <MudText Typo="Typo.body2">Access all domain services from here.</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Dashboard</MudText>
                    <MudText Typo="Typo.body2">View your dashboard and analytics.</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" md="6" lg="4">
            <MudCard Elevation="2">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Settings</MudText>
                    <MudText Typo="Typo.body2">Manage your preferences and settings.</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>











