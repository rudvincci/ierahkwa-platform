    //     typeof(Mamey.Domain.Service2.BlazorWasm.Components.Pages.EntityIndex).Assembly
    // };
    private static readonly System.Reflection.Assembly[] _additionalAssemblies = Array.Empty<System.Reflection.Assembly>();
}

